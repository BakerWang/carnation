</script>

<script>
	var screenWidth = window.innerWidth || document.documentElement.clientWidth;
	document.documentElement.style.fontSize = parseInt(screenWidth / 7.5)
			+ "px";
	
	function onClickStatus(val){
		$('#statusName').val(val);
		$("#form_id").submit()
	}
</script>
</head>
<body>
	<div class="main">
		<div class="my-top">
		#set($user_photo="$!imageWebServer/$!config.memberIcon.path/$!config.memberIcon.name")
			  #if($!config.memberIcon)
			   #set($user_photo="$!imageWebServer/$!config.memberIcon.path/$!config.memberIcon.name")
			  #end
			   #if($!user.headImgPath)
			   #set($user_photo="$!user.headImgPath")
			  #end
			<img data-original="$user_photo" alt="">
			<div class="my-top-mes">
				<div class="name">$!{user.nickname}</div>
				<div class="dengj">
				</div>
			</div>
		</div>
		<div class="my-guanzhu">
			<ul>
				#if($!cn==true)
				<li>
						<a href=""> <i>
						#if($!cnRepeat)$cnRepeat</i> 
						#else 0
						#end
						<span>云购币</span></a>
				</li>
				<li>
					<a href=""> <i>
						#if($!{user.availableBalance})
							#set($money=$!{cnBonus}+$!{user.availableBalance})
							¥$money
						#else ¥0 
						#end</i> <span>云豆</span>
					</a>
				</li>
				<li>
					<a href=""> <i>
						#if($!{user.availableBalance})¥$!{user.availableBalance}
						#else ¥0 
						#end</i> <span>云豆</span>
					</a>
				</li>
				<li>
				<a href=""> <i>
					#if($!{user.integral})$!{user.integral}分 #else 0分 #end</i> <span>积分</span>
				</a>
				</li>
				#else
				
				
				
				#end
			</ul>
		</div>
		
		<form action="$!webPath/order-list" id="form_id" method="post">
			<input type="hidden" name="orderStatus" id="statusName">
		</form> 
		<div class="my-order-font">
			<span class="chakallorder" onclick="onClickStatus(null)" id="all" >查看全部订单</span> <span class="myorder">我的订单</span>
		</div>
		<div class="my-guanzhu fahuo-message">
			<ul>
				<li><a onclick="onClickStatus('order_submit')" > <i class="dfk"></i> <span>待付款</span>
				</a></li>
				<li><a onclick="onClickStatus('order_pay')" id="order_pay"> <i class="dfh"></i> <span>待发货</span>
				</a></li>
				<li><a onclick="onClickStatus('order_shipping')" id="order_shipping"> <i class="dsh"></i> <span>待收货</span>
				</a></li>
				<li><a onclick="onClickStatus('order_receive')" id="order_receive"> <i class="dpj"></i> <span>待评价</span>
				</a></li>
			</ul>
		</div>
		<div class="my-ul">
			<ul>
				<li style="display: none;"><a href="" class="yqhy">邀请好友</a></li>
				<li><a href="$!webPath/goods_cart1_load.htm" class="gwc">购物车</a></li>
				<li><a href="$!webPath/buyer/address.htm" class="shdz">收货地址</a></li>
				<!-- <li><a href="" class="sz">设 置</a></li> -->
			</ul>
		</div>
	</div>
	<script src="$!webPath/resources/js/jquery.min.js"
		type="text/javascript"></script>
	<script src="$!webPath/resources/js/jquery.lazyload2.js"
		type="text/javascript"></script>

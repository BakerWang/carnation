<title>商品列表</title>
<link href="$!webPath/resources/shop/css/style.css" rel="stylesheet"
	type="text/css" />
<style type="text/css">
.p_filter {
	top: 0rem;
}

.m_touch {
	top: 0.82rem;
	width: 100%;
}
.bvzhi{margin-left: 0rem;}
</style>
<script src="$!webPath/resources/js/jquery-1.6.2.js"></script>
<script>
var _hmt = _hmt || [];

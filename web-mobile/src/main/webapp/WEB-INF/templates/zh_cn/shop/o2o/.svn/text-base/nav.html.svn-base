<style>
.left_menu { height: 399px; background: #f8f8f8;}
.left_menu_con { width: 180px; min-height: 384px;}
.left_menu_con_center,.left_menu_con_center_left dt,.left_menu_con_center_left { float: none; width: auto;}
.left_menu_dl a { color: #333333;}
.left_menu_dt { border: none;}
.left_menu_dl { border-bottom-color: #e9e9e9; border-top: 1px #f8f8f8 solid;}
.nav_left h2 { padding-top: 3px;}
.nav_left h2 em { top: 0; line-height: 40px;}
.left_menu_dl,.left_menu_dt { height: 47px;}
.left_menu_str { font-weight: normal; padding: 13px 0 0 20px;}
.index_topleft { display: none;  position:absolute; top:auto; left:0;}
.menu-show .index_topleft { display: block; }
.other_menu { display: block;}
.left_menu_con_center_left dt { margin: 0; font-size: 12px; font-weight: 100; text-align: left; background: none; color: #666; line-height: 28px;}
.left_menu_con_center_left dt a:hover { color: #19bf96;}
.left_menu_con_center_left { margin: 0;}
.left_menu_title { padding-left: 10px; font-size: 16px;text-align: left;}

.menu-arrow { position: absolute; right: 10px; top: 50%; margin-top: -9px; background-position: -190px 0;}
.left_menu_dl_hover { border-bottom-color: #19bf96; border-top-color: #19bf96;}
.left_menu_dl_hover .menu-arrow { background-position: -171px 0;}
</style>
<script>
    jQuery(document).ready(function () {
        jQuery("#navul li a").each(function (i) {
            var original_url = jQuery(this).attr("href");
            if ("" != "") {
                if (original_url.indexOf("") >= 0) {
                    jQuery(this).parent().addClass("this");
                }
            } else if (i == 0) {
                jQuery(this).parent().addClass("this");
            }
        });

        //榧犳爣缁忚繃宸︿晶鍒嗙被
        jQuery(".left_menu_dl").hover(function(){
            var $this = $(this), $dd = $this.find(".left_menu_dd"), top = $this.position().top, mtop = -1 - top, h;
            $this.addClass("left_menu_dl_hover");
            h = $this.find(".left_menu_con").height();
            if (h > (top + 44)) {
                $dd.css("margin-top", mtop);
            } else {
                mtop = - h + 33;
                $dd.css("margin-top", mtop);
            }
        },function(){
            $(this).removeClass("left_menu_dl_hover");
        });

        //
        console.log(jQuery(".nav_left").length);
        jQuery(".nav_left").mouseover(function(){
            jQuery(this).find(".index_topleft").addClass("other_menu");
        });
        jQuery(".nav_left").mouseleave(function(){
            jQuery(this).find(".index_topleft").removeClass("other_menu");
        });

    });
</script>

<div class="nav">
<div class="nav_center">
<div class="nav_left">
<h2><a href="javascript:void(0)"><span>全部分类<em><img src="$!webPath/resources/style/system/front/default/images/nav_top.gif" width="7" height="4" /></em></span></a> </h2>
<div class="index_topleft">
        <div class="left_menu" id="left_menu"> 
        #foreach($gc in $!gcs)
          <dl #if($!velocityCount%2==0)class="left_menu_dl double"  #else class="left_menu_dl" #end child_count="$!gc.childs.size()" #if($!{gc.gc_color}) gc_color="$!{gc.gc_color}" #else gc_color="#E60012" #end  id="$!gc.id" style="position:relative;">
            <!--left_menu_this缁忚繃鐘舵�侊紝鍜宭eft_menu_dt涓嶇粡鐘舵�佽繃浜ゆ崲-->
            <dt class="left_menu_dt" id="dts_$!gc.id">
            	<strong class="left_menu_str"><a href="$!webPath/group/category/search.htm?classId=$!{gc.id}">$!gc.gcName</a></strong>
            </dt>
            <dd class="left_menu_dd" id="child_$!gc.id">
            <!--瀛樺湪骞垮憡鏃秎eft_menu_con this   榧犳爣缁忚繃鐖剁骇鏃舵坊鍔爏tyle="border:1px solid #F00; border-left:3px solid #F00;"娣诲姞搴曞眰棰滆壊-->
              <div class="left_menu_con" id="left_menu_con_$!{gc.id}">
                 <h3 class="left_menu_title"><a href="$!webPath/group/category/search.htm?classId=$!{gc.id}">$!gc.gcName</a></h3>
              <span class="left_menu_sp">
                <div class="left_menu_con_center">
                 #foreach($gc1 in $gc.childs)
                	<div class="left_menu_con_center_left #if($velocityCount%3 == 1) clear #end">
                    	<dl>
                        	<dt><a href="$!webPath/group/category/search.htm?classId=$!{gc1.id}">$!gc1.gcName</a></dt>
                        </dl>
                    </div>
                   #end 
                </div>
                </span> 
             </div>
            </dd>
          </dl>
          #end </div>
      </div>
</div>
<ul id="navul">
    <li><a href="$!webPath/group/index.htm" id="1" original_url=""><span>服务首页</span></a></li>
    <li><a href="$!webPath/index.htm" id="2" original_url=""><span>商城首页</span></a></li>
</ul>
</div>
</div>

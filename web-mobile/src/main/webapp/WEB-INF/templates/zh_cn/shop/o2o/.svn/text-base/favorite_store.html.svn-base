<!DOCTYPE html>
<html>
<head lang="en">
    <meta charset="UTF-8">
    <title>收藏的商户</title>
    <link href="$!webPath/resources/style/system/front/default/css/public.css?v=2" type="text/css" rel="stylesheet"/>
    <link href="$!webPath/resources/style/common/css/overlay.css" type="text/css" rel="stylesheet"/>
    <link href="$!webPath/resources/style/system/front/default/css/user.css" type="text/css" rel="stylesheet"/>
    <link href="$!webPath/resources/style/service/public.css" type="text/css" rel="stylesheet"/>

    <script src="$!webPath/resources/js/jquery-1.6.2.js"></script>
    <script src="$!webPath/resources/js/jquery.shop.common.js"></script>

</head>
<body>
$!httpInclude.include("/top.htm")
$!httpInclude.include("/head.htm")
$!httpInclude.include("/nav1.htm")

<div class="main clearfix">
    <div class="usercenter"> $!httpInclude.include("/buyer/nav.htm?op=favorite")
        <div class="usercenter_right">
            <div class="myorder">
                <h4><span class="myorder_fright"></span><strong>我的收藏</strong></h4>
            </div>

            <div class="user_list">
                <div class="user_list_title">
                    <ul class="user_title_ul">
                           <li><i></i><a href="$!webPath/buyer/favorite_goods.htm">收藏商品</a></li>
										            <li><i></i><a href="$!webPath/buyer/favorite_store.htm">收藏店铺</a></li>
										            <li class="this"><i></i><a href="$!webPath/group/favorite_store.htm">收藏商户</a></li>
										            <li><i></i><a href="$!webPath/group/favorite_service.htm">收藏服务</a></li>
                    </ul>
                </div>

                <table width="100%" cellspacing="0" cellpadding="0" border="0" class="user_order_table order_view_table favorite_table">
                    <tr>
                        <th width="40%">商户名称</th>
                        <th width="20%">收藏时间</th>
                        <th width="15%">收藏人气</th>
                        <th width="15%">操作</th>
                    </tr>
                    #foreach($obj in $objs)
                    
                    								#if($!obj.storeLogoPath)
																						#set($img=$obj.storeLogoPath + "_108x78")
																					#else
																						#set($img=$config.storeImage.path)
																					#end
                    <tr>
                        <td>
                            <a class="order_img_a" target="_blank"
                               href="$!webPath/group/store.htm?id=${obj.fid}">
                                <img width="108" height="78"
                                     src="$!{img}">
                            </a>
                            <div class="order_buy_data">
                                <span class="title ell"> $!obj.storeName</span>
                                <span class="fz-12 c_gray">地址：$!obj.storeAddress</span>
                            </div>
                        </td>
                        <td align="center">
                            <span class="c_blue">$!CommUtil.formatShortDate($!obj.createTime)</span>
                        </td>
                        <td align="center">
                        		$!obj.favoriteCount
                        </td>

                        <td align="center">
                            <div class="goodsbtn"><input type="button" value="删除" onclick="showDialog('msg_info','','确定删除该收藏商品吗?',1,'question',3,function(){window.location.href='$!webPath/buyer/favorite_del.htm?id=${obj.id}&currentPage=$!{currentPage}&type=6'});" /></div>
                        </td>
                    </tr>
					#end
                </table>
			#if($objs)
            <form action="$!webPath/group/favorite_store.htm" method="post" id="ListForm">
            <div class="fenye">
              <span class="user_page_sp">
                <input name="currentPage" type="hidden" id="currentPage" value="$!currentPage" />
                $!gotoPageFormHTML
              </span>
            </div>
            </form>
            #end
            </div>
        </div>
    </div>
</div>

$!httpInclude.include("/footer.htm")

<script>

    function refund(wid) {
        showDialog("warning","","确定此商品退货吗！",1,"warning",3,function() {
            alert(wid);
        });
    }
</script>
</body>
</html>
						}
					}
				});		*/
								
				
				var imgArr=jQuery(".topicImg ul li img");
				var imgCount=imgArr.length;
				var index=0;
				function loadOneByOne(){
					if(imgCount==0) return;
					var img=document.createElement("img");
					var dataSrc=imgArr.eq(index).attr("data-src")
					img.src=dataSrc;
					if(img.complete){
						if(img.width<img.height){
							imgArr.eq(index).attr("src",dataSrc).css(cssText1).fadeIn();								
						}else{
							imgArr.eq(index).attr("src",dataSrc).css(cssText2).fadeIn();	
						}
						if(index<imgCount){
							index++;
							loadOneByOne();
						}
					}else{						
						img.onload=function(){
							if(img.width<img.height){
								imgArr.eq(index).attr("src",dataSrc).css(cssText1).fadeIn();								
							}else{
								imgArr.eq(index).attr("src",dataSrc).css(cssText2).fadeIn();	
							}
							if(index<imgCount){
								index++;
								loadOneByOne();
							}
						}					
						
					}
				}
				loadOneByOne();				
			});
		</script>
		<script type="text/javascript">
		//评论
		var isSending=false;
		jQuery("#submit_btn").click(function(){
			if(!uid){
				tips("未登陆,不能评论回复");
				return;
			}
			if(isSending){
				return;
			}
			jQueryinput=jQuery("#userInput");
			var replyID=jQueryinput.attr("data-listID");
			if(jQueryinput.val()==""){
				tipsbox("评论不能为空");
				return;
			}
			if(replyID==""){
				
				isSending=true;
				//评论
				$.ajax({
		             type: "POST",
		             url: '${webPath}'+"/post/post_postEvaluete",
		             data: {uid:uid,postId:$!postBO.id,content:jQueryinput.val()},
		             dataType: "json",
		             success: function(data){
		            	var obj=data.evalBO;
                      	var html = ''; 
						html+="<div class=\"list\" data-listID="+obj.id+">";
						
						html+="<img src="+obj.headImgPath+" alt="+"/>";
						
						html+="<div class=\"content\">";
						html+="<div class=\"replydiv reply1\"  data-uid="+obj.fromUserid+">";
						html+="<span class=\"name\">"+obj.fromUserName+"</span>";
						html+="<span class=\"time\">"+obj.addtiemFormat+"</span>";
						html+="<div class=\"text\">"+jQueryinput.val()+"</div>";
						html+="</div>";
						
						html+="</div>";
						html+="</div>";
                         
                        $('#replyListCon').append(html);
                        isSending=false;
                        jQueryinput.val("");
                        tipsbox("评论成功！");
                    }
		        });
				
			}else{
				//回复content
				$.ajax({
		             type: "POST",
		             url: '${webPath}'+"/post/post_replyEvaluete",
		             data: {uid:uid,postId:$!postBO.id,content:jQueryinput.val(),PID:replyID},
		             dataType: "json",
		             success: function(data){ 
		            	console.log(data); 
		            	var obj=data.evalBO;
		            	console.log(obj);
                      	var html = ''; 
                      	
						html+="<div class=\"replydiv reply2\"  data-uid="+obj.fromUserid+">";
						html+="<span class=\"name\">"+obj.fromUserName+"</span>";
						html+="<span class=\"time\">"+obj.addtiemFormat+"</span>";
						html+="<div class=\"text\">"+jQueryinput.val()+"</div>";
						html+="</div>";
                         
                        $(".list[data-listID='"+replyID+"']").find(".content").append(html);                      
                        isSending=false;
                        jQueryinput.val("");
                        tipsbox("回复成功！");
                    }
		        });
				
			}
			
			document.getElementById("userInput").blur();
		});
		
		jQuery("#more").click(function(){
			jQuery(this).html("加载中...");
			var that=this;
			jQuery.ajax({
             type: "POST",
             url: "",
             data: {postId:$!postBO.id},
             dataType: "json",
             success: function(data){
                        var html = ''; 
						for(var i=0,len=data.evaluateList.length;i<len;i++){
							var obj=data.evaluateList[i],
								obj2=obj.replyList;
							
							html+="<div class=\"list\" data-listID="+obj.id+">";
							html+="<img src="+obj.headImgPath+" alt="+"/>";
							html+="<div class=\"content\">";
							
							html+="<div class=\"replydiv reply1\"  data-uid="+obj.fromUserid+">";
							html+="<span class=\"name\">"+obj.fromUserName+"</span>";
							html+="<span class=\"time\">"+obj.addtiemFormat+"</span>";
							html+="<div class=\"text\">"+obj.content+"</div>";
							html+="</div>";
							
							for(var j=0,len2=obj2.length;j<len2;j++){
								html+="<div class=\"replydiv reply2\"  data-uid="+obj2.fromUserid+">";
								html+="<span class=\"name\">"+obj2.fromUserName+"</span>";
								html+="<span class=\"time\">"+obj.addtiemFormat+"</span>";
								html+="<div class=\"text\">"+obj2.content+"</div>";
								html+="</div>";
							}
						}	
						html+="</div>";
						html+="</div>";
                        jQuery('#replyListCon').append(html);
                        jQuery(that).hide();
                      }
         	});
			
		});
		
		jQuery("#replyListCon").delegate(".replydiv","click",function(e){
			if(jQuery(this).attr(" data-uid=")=="本人的用户id"){
				document.getElementById("userInput").blur();
				return;
			}
			var temp=jQuery(this).closest(".list").attr("data-listID");
			var jQueryInput=jQuery("#userInput");
			var name=jQuery(this).find(".name").html();
			jQueryInput.attr("data-listID",temp);
			document.getElementById("userInput").focus();
			jQueryInput.attr("placeholder","回复:"+name);
			e.stopPropagation();
		});
		
		jQuery(".bottomReply").click(function(e){
			e.stopPropagation();
		});
		
		jQuery(document).click(function(){
			document.getElementById("userInput").blur();

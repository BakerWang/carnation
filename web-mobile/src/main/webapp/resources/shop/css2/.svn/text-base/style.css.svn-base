@charset "utf-8";
    /**
    * Dec: Base style 
    * Developers: wukong <wukong@juanpi.com>
    * Date: 2013-06-21;
    **/
    html{
        font-size:50px;
        background-color:#f7f7f7;
        padding-bottom: 5.5rem
    }
   
    body, div, dl, dt, dd, ul, ol, li,
    h1, h2, h3, h4, h5, h6, pre, code,
    form, fieldset, legend, input, button,
    textarea, p, blockquote, th, td {
        margin: 0;
        padding: 0;
    }
    input{
    -webkit-tap-highlight-color: rgba(0, 0, 0, 0);
    -webkit-appearance: none;
    border: 0;
    }
    fieldset,img{
        border:0px;
    }
    a{
        text-decoration:none;
    }
    
    :focus {
        outline: 0 none;
    }
    ul,li{
        list-style:none;
    }
    em {
        font-style: normal;
    }
.footer {
    height: 0.98rem;
    background: #fbfbfb;
    border-top: 1px solid #f0f0f0;
    position: fixed;
    bottom: 0rem;
    overflow: hidden;
    width: 100%;
}
.footer ul {
    overflow: hidden;
}
.footer ul li {
    float: left;
    width: 25%;
    height: 0.98rem;
    text-align: center;
}
.footer ul li a {
    overflow: hidden;
    display: block;
    position: relative;
    text-decoration: none;
    height: 0.98rem;
    margin-top: 0.01rem
}
.footer ul li a.crr .jksc {
    background: url(../images/bto-jksc.png) center center no-repeat;
    background-size: 0.47rem;
}
.footer ul li .jksc {
    background: url(../images/bto-jksc2.png) center center no-repeat;
    background-size: 0.47rem;
}
.footer ul li a.crr span {
    display: block;
    font-size: 0.22rem;
    color: #30c5a0;
    float: left;
    width: 100%;
    margin-top: 0.065rem
}
.footer ul li span {
    display: block;
    font-size: 0.22rem;
    color: #979797;
    width: 100%;
    float: left;
    margin-top: 0.065rem
}

.footer ul li i {
    display: inline-block;
    width: 100%;
    height: 0.48rem;
    text-align: center;
    line-height: 0.48rem;
    float: left;
    margin-top: 0.05rem
}
.footer ul li a.crr .ppg {
    background: url(../images/bto-ppg.png) center center no-repeat;
    background-size: 0.42rem 0.48rem;
}
.footer ul li .ppg {
    background: url(../images/bto-ppg2.png) center center no-repeat;
    background-size: 0.42rem 0.48rem;
}
.footer ul li a.crr .gwc {
    background: url(../images/bto-gwc.png) center center no-repeat;
    background-size: 0.52rem 0.48rem;
}
.footer ul li .gwc {
    background: url(../images/bto-gwc2.png) center center no-repeat;
    background-size: 0.52rem 0.48rem;
}
.footer ul li a.crr .wd {
    background: url(../images/bto-wd.png) center center no-repeat;
    background-size: 0.48rem 0.46rem;
}
.footer ul li .wd {
    background: url(../images/bto-wd2.png) center center no-repeat;
    background-size: 0.48rem 0.46rem;
}


html{
	font-size: 16px !important;
	font-family: "PingFangSC-Light";
}
.wrap{
	height: auto;
	overflow:auto;
}
.weui-pull-to-refresh{
	margin-top: -160px;
}
.weui-pull-to-refresh__layer{
	height: 44px;
	padding: 108px 10px 8px 10px;
	background: #F0F0F0;
}
.weui-pull-to-refresh__layer .weui-pull-to-refresh__arrow{
	margin-right:10px;
	vertical-align:10px;
}
.weui-popup__overlay{
	opacity: 0.4;
}
.weui-popup__modal .toolbar{
	background: #F7F7F7;
	height: 40px;
	line-height: 40px;
}
.close-date{
	float: left;
	width: 50px;
	text-align: center;
	color: #9B9B9B;
}
.date-sub{
	float: right;
	width: 50px;
	text-align: center;
	color: #33B1FF;
}
.weui-picker-modal.picker-modal-inline{
	position: absolute;
	bottom: 0;
	left: 0;
	z-index: 99;
}
.weui-picker-modal .picker-items-col.picker-items-col-divider{
	margin-right: 22px;
}
.weui-picker-modal.picker-modal-inline{
	height: 173px;
}
.time-container{
	width: 100%;
	height: 173px;
	overflow: hidden;
	display: none;
}
.weui-popup__modal .modal-content{
	height: 280px;
}
.date-input{
	overflow: hidden;
	padding: 16px 0;
	height: 40px;
	line-height: 40px;
	font-size: 15px;
	text-align: center;
	background: #fff;
}
.date_start{
	float: left;
	width: 35%;
	height: 24px;
	border: 0;
	margin: 8px 0 6px 10%;
	text-align: center;
	color: #119AEE;
	border-bottom: 2px solid #119AEE;
}
.popup-cen{
	float: left;
	width: 10%;
}
.date_end{
	float: left;
	width: 35%;
	height: 24px;
	border: 0;
	margin: 8px 0 6px 0;
	color: #4A4A4A;
	text-align: center;
	border-bottom: 2px solid #DDDDDD;
}



.pull-tips p{
	font-size: 15px;
	line-height: 22px;
	color: #4A4A4A;
}
.refresh{
	font-size: 15px;
	line-height: 44px;
	color: #4A4A4A;
}
.choose-time{
	padding: 10px;
	border-bottom: 10px solid #F7F7F7;
}
.date-choose{
	background: url(../img/dateicon@3x.png) no-repeat left;
	background-size: 17px 15px;
	font-size: 14px;
	width: 70px;
	height: 30px;
	line-height: 30px;
	color: #9B9B9B;
	padding-left: 26px;
	margin: auto;
}
.date-choose-on{
	background: url(../img/dateicon_on@3x.png) no-repeat left;
	background-size: 17px 15px;
	font-size: 14px;
	width: 200px;
	height: 30px;
	line-height: 30px;
	color: #5EB9F2;
	padding-left: 26px;
	margin: auto;
}
.detailinfo{
	position: relative;
	padding: 2px 0.6rem;
}
.detailinfo:before{
	content: " ";
    position: absolute;
    top: 0;
    left: 0;
    width: 40px;
    height: 30px;
    z-index: 1;
    background: #FFFFFF;
}
.detailinfo-list{
	position: relative;
	padding: 8px 0;
}
.detailinfo-list:before{
	content: " ";
    position: absolute;
    left: 14.5px;
    top: 0;
    width: 1px;
    height: 100%;
    background: #DDDDDD;
}
.list-date{
	position: relative;
	height: 50px;
	padding-left: 30px;
}
.detailinfo .detailinfo-list:first-child .list-date:before{
	content: " ";
    position: absolute;
    left: 10px;
    top: 50%;
    margin-top: -5px;
    width: 10px;
    height: 10px;
    background: #84C756;
    border-radius: 50%; 
    border: 0;
}
.list-date:before{
	content: " ";
    position: absolute;
    left: 12px;
    top: 50%;
    margin-top: -3px;
    width: 4px;
    height: 4px;
    background: #fff;
    border: 1px solid #DDDDDD;
    border-radius: 50%;
}
.list-date p:nth-child(1){
	font-size: 0.9rem;
	line-height: 26px;
	color: #4A4A4A;
}
.list-date p:nth-child(2){
	font-size: 0.6rem;
	line-height: 16px;
	color: #9B9B9B;
}
.list-info{
	height: 22px;
	line-height: 22px;
	padding-bottom: 4px;
	padding-left: 30px;
	color: #9B9B9B;
	font-size: 0.75rem;
	position: relative;
}
.list-info span:nth-child(1){
	position: absolute;
	left: 30px;
}
.list-info span:nth-child(2){
	position: absolute;
	left: 54%;
}
.list-info span font{
	font-size: 16px;
	padding-right: 2px;
}
.list-info p{
	color: #33B1FF;
	font-size: 0.9rem;
}
.none-data-pig{
	width: 120px;
	height: 120px;
	background: #FFA717;
	margin: auto;
	margin-top: 32%;
	border-radius: 50%;
	overflow: hidden;
}
.none-data-pig img{
	width: 50%;
	height: 50%;
	margin: 25%;
}
.none-data-tip{
	margin-top: 10px;
	text-align: center;
	font-size: 17px;
}
.none-data-tip p{
	margin: 0;
	line-height: 26px;
}
.data-end{
	text-align: center;
	color: #B8B8B8;
	font-size: 14px;
	line-height: 30px;
	margin-bottom: 20px;
}

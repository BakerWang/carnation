.main_container{width: 100%;border: solid 1px #e8e8e8;font-family:"Microsoft Yahei";color: #323232;overflow: hidden}
.titleBar{background: #fafafa;height: 40px;line-height: 40px;text-indent: 16px}
.left_content{float: left;width: 700px;margin-left: 20px;margin-top: 35px}
.left_content .basicInfo{height: 117px;position: relative;display: table}
.left_content .basicInfo .headimg{border-radius: 50%;display: block;position:absolute;left: 0; top: 0px;width: 117px;height: 117px}
.left_content .basicInfo .headimg img{width: 117px;height: 117px;border-radius: 50%;}
.left_content .basicInfo .nameCode{position: relative;left: 130px;display:table-cell;vertical-align: middle}
.left_content .basicInfo .nameCode>span{display: block;font-size: 20px;}
.left_content .basicInfo .nameCode .nickname{}
.left_content .basicInfo .nameCode .code{color: #707070 }
.left_content .inviteWords{font-size: 16px;color: #707070;margin-top: 40px}
.inviteWords_text{width: 492px;height: 80px;font-size: 16px;line-height: 25px;padding-left: 8px;margin-top: 4px}
.text_area{position: relative}
.text_area label{position: absolute;top: 5px;left: 8px;color: #323232}
.left_content .btns{margin: 30px 0px 100px 0px; }
.left_content .btns a,.left_content .btns input[type="submit"]{outline:none;width: 150px;text-align: center;height: 50px;line-height: 50px;margin-left:30px;background: #046c97;color: #fff;border: none;font-size: 16px;display: inline-block }
.left_content .btns a:hover{text-decoration: none}
.qrCode_content{float: left;margin-top: 66px;width: 200px;text-align: center}
.qrCode_content #qrcode{width: 200px;height: 200px}
.qrCode_content span{font-size: 14px;color: #717171}

.common-container{width: 1030px;border: solid 1px #c1c1c1;overflow: hidden}
.qrCodeSj{float: right;margin-right: 30px}

.inviteList{width: 970px;margin: 20px auto 30px auto}
.inviteList ul li{height: 99px;border-bottom: solid 1px #c1c1c1;overflow: hidden}
.inviteList ul li .content{height: 70px;margin-top: 15px}
.inviteList ul li .content .basic{position: relative;display: table;height: 70px}
.inviteList ul li .content .basic .headimg{border-radius: 50%;display: block;position:absolute;left: 0; top: 0px;width: 70px;height: 70px}
.inviteList ul li .content .basic .headimg img{width: 70px;height: 70px}
.inviteList ul li .content .basic .nameCode{position: relative;left:85px;display:table-cell;vertical-align: middle}

.inviteList ul li .content .basic .nameCode .nickname {display: block;font-size: 22px;}
.inviteList ul li .content .basic .nameCode .code{ color: #707070;font-size: 18px}
.inviteList ul li .content .addtime{color: #707070;font-size: 18px;float: right;margin-right: 12px;margin-top: 45px}
















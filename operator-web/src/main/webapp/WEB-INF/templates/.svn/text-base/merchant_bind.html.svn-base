<script type="text/javascript">
jQuery(document).ready(function(){
		var merchant_id="$!sellerUID";      //页面加载时已绑定的商户id 
		jQuery(".merchantList").on("click",".list",function(){
			if(jQuery(this).hasClass("curr")) return;					
			jQuery(this).addClass("curr").siblings().removeClass("curr");					
		});
		
		jQuery("#cancle_merchantSwitch").click(function(){
			jQuery(".model,.merchantBindBox").hide();
		});
		jQuery(".btnBind,.btnSwitch").click(function(){
			getOperatorRebateList();
			
		});
		jQuery("#comfirm_merchantSwitch").click(function(){
			 var bind_id=jQuery(".merchantList .curr").attr("data-id");
			 console.log(">>>>>>> "+bind_id);
			 if(bind_id==merchant_id) return;
			 //切换绑定商户
			 jQuery.ajax({
	             type: "POST",
	             url: "/operator/operatorRegMemberOther.htm",
	             data: {sellerUID:bind_id},
	             dataType: "json",
	             success: function(data){
	            	 merchant_id=bind_id;
	            	 jQuery(".model,.merchantBindBox").hide();
	            	 var result = data.result;
	            	 if(result=="succ"){
	            		 window.location.href="/operator/merchant_bind.htm";
	            	 }
	            	 else{
	            		 alert(json.content);
	            	 }
                 }
	         });
		});
		//绑定或切换会员
		function getOperatorRebateList(){
			jQuery.ajax({
				type:"POST",
				url:"/operator/getOperatorRebateList.htm",
				date:{},
				dateType:"json",
				success:function(data){
					var obj = eval('(' + data + ')');
					var arr = obj.list;
					var html = "";
					for(var i = 0;i<arr.length;i++)
					{
						if(arr[i].sellerUID==merchant_id){
						 	html += "<div class='list curr' data-id='"+arr[i].sellerUID+"'>";
						}else{
							html += "<div class='list' data-id='"+arr[i].sellerUID+"'>";
						}					    
						html += "<div class='name'>"+arr[i].shopName+"</div>";
						html += "<div class='num'>"+arr[i].memCount+"</div>";
						html += "</div>";
						
					}
					jQuery(".merchantList").html(html); 
					jQuery(".model,.merchantBindBox").show();
				}
			});
		}
	});
</script>

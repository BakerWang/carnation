#*********************************手机号的城市记录表 陈舟 2016-01-22*********BEGIN
DROP TABLE IF EXISTS user_phone_area;
CREATE TABLE `user_phone_area` (
  `id` BIGINT(20) NOT NULL AUTO_INCREMENT COMMENT 'id',
  `uid` BIGINT(20) NOT NULL COMMENT '用户id',
  `area_id` BIGINT(20) NOT NULL DEFAULT '0' COMMENT '城市id',
  `area_name` VARCHAR(255) NOT NULL COMMENT '城市名称',
  `phone` VARCHAR(20) DEFAULT NULL COMMENT '手机号',
  `modify_time` DATETIME DEFAULT NULL COMMENT '修改时间',
  `delete_status` TINYINT(4) DEFAULT '0' COMMENT '删除状态，0-正常,1-删除',
  PRIMARY KEY (`id`)
) ENGINE=INNODB DEFAULT CHARSET=utf8 ROW_FORMAT=COMPACT;
#****************************************************************END




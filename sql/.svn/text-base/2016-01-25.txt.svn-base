#*********************************微信消息记录 陈舟 2016-01-29*********BEGIN
DROP TABLE IF EXISTS wx_msg_log;
CREATE TABLE `wx_msg_log` (
  `id` BIGINT(20) NOT NULL AUTO_INCREMENT COMMENT 'id',
  `type` VARCHAR(100) NOT NULL COMMENT '消息类型',
  `content` TEXT  NULL  COMMENT '内容',
  `add_time` DATETIME DEFAULT NULL COMMENT '添加时间',
  `delete_status` TINYINT(4) DEFAULT '0' COMMENT '删除状态，0-正常,1-删除',
  PRIMARY KEY (`id`)
) ENGINE=INNODB DEFAULT CHARSET=utf8 ROW_FORMAT=COMPACT COMMENT='微信公众号消息列表';
#****************************************************************END

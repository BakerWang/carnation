<script>
jQuery(document).ready(function(){
  #if($!obj.ig_limit_type==true)
    #set($max=$!{obj.ig_limit_count})
  #else
    #set($max=$!{obj.ig_goods_count})
  #end
  jQuery("#theForm").validate({
      rules:{
		   exchange_count:{required:true,digits:true,max:$!{max},min:1}
		  },
	  messages:{
		    exchange_count:{required:"兑换数量不能为空",digits:"只能为整数",max:"最多兑换{0}",min:"最少兑换1件"}
		  }
   });
  
  jQuery(".cut_num").click(function(){
	  var count=jQuery("#exchange_count").val();
	  if(count>1){
	    count=parseInt(count)-1;
		jQuery("#exchange_count").val(count);
		changeButton(count);
	  }
 });
 //
 jQuery(".add_num").click(function(){
	 var count=jQuery("#exchange_count").val();
	  count=parseInt(count)+1;
	  jQuery("#exchange_count").val(count);
	  changeButton(count);
 });
 
 $('#exchange_count').change(function(){
	var count = $('#exchange_count').val();
	if(!isNaN(count)){
		changeButton(count);
	}
 });
 
 changeButton(1);
});

function compamerIntegral(count){
	var userIntegral = 0;
	var goodsIntegeral = 0;
	#if($!user)
		userIntegral = $!{user.integral};
		goodsIntegeral = $!{obj.ig_goods_integral};
	#else
		return true;
	#end
	
	if(userIntegral>0 && goodsIntegeral>0 && (count && count>0)) {
		if(goodsIntegeral * count > userIntegral){
			return false;
		} else {
			return true;
		}
	}
}

function changeButton(count){
	if(count){
		var status = compamerIntegral(count);
		if(status){
			$('#exchangeBtn').attr('class','detspan');
			$('#exchangeButton').val('我要兑换');
			$("#exchangeButton").attr("disabled", false);
		}else{
			$('#exchangeBtn').attr('class','notdetspan');
			$('#exchangeButton').val('积分不足');
			$("#exchangeButton").attr("disabled", true);
		}
	}
}



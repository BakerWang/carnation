<!DOCTYPE html>
<html>
<head lang="en">
    <meta charset="UTF-8">
    <title>收藏的服务</title>
    <link href="$!webPath/resources/style/system/front/default/css/public.css?v=2" type="text/css" rel="stylesheet"/>
    <link href="$!webPath/resources/style/common/css/overlay.css" type="text/css" rel="stylesheet"/>
    <link href="$!webPath/resources/style/system/front/default/css/user.css" type="text/css" rel="stylesheet"/>
    <link href="$!webPath/resources/style/service/public.css" type="text/css" rel="stylesheet"/>

    <script src="$!webPath/resources/js/jquery-1.6.2.js"></script>
    <script src="$!webPath/resources/js/jquery.shop.common.js"></script>

</head>
<body>
$!httpInclude.include("/top.htm")
$!httpInclude.include("/head.htm")
$!httpInclude.include("/nav1.htm")

<div class="main clearfix">
    <div class="usercenter"> $!httpInclude.include("/buyer/nav.htm?op=favorite")
        <div class="usercenter_right">
            <div class="myorder">
                <h4><span class="myorder_fright"></span><strong>我的收藏</strong></h4>
            </div>

            <div class="user_list">
                <div class="user_list_title">
                    <ul class="user_title_ul">
                           <li><i></i><a href="$!webPath/buyer/favorite_goods.htm">收藏商品</a></li>
										            <li><i></i><a href="$!webPath/buyer/favorite_store.htm">收藏店铺</a></li>
										            <li><i></i><a href="$!webPath/group/favorite_store.htm">收藏商户</a></li>
										            <li class="this"><i></i><a href="$!webPath/group/favorite_service.htm">收藏服务</a></li>
                    </ul>
                </div>

                <table width="100%" cellspacing="0" cellpadding="0" border="0" class="user_order_table order_view_table favorite_table">
                    <tr>
                        <th width="40%">服务</th>
                        <th width="15%">单价</th>
                        <th width="20%">收藏时间</th>
                        <th width="15%">操作</th>
                    </tr>
                    #foreach($obj in $objs)
                    <tr>
                        <td>
                            <a class="order_img_a" target="_blank"
                               href="$!webPath/group/view_${obj.id}.htm">
                                <img width="108" height="78" title="谷尊有机米(2kg装)"
                                     src="$!{obj.groupAccPath}_108x78">
                            </a>
                            <div class="order_buy_data">
                                $!obj.ggName
                            </div>
                        </td>
                        <td align="center">
                            <span class="c_blue">¥$!obj.groupPrice</span>
                        </td>
                        <td align="center">
                            $!CommUtil.formatShortDate($!obj.addTime)
                        </td>

                        <td align="center">
                            <div class="goodsbtn"><input type="button" value="删除" onclick="showDialog('msg_info','','确定删除该收藏服务吗?',1,'question',3,function(){window.location.href='$!webPath/buyer/favorite_del.htm?id=${obj.fid}&currentPage=$!currentPage&type=5'});" /></div>
                            <div class="goodsbtn mt-10">
                            <input title="" name="" value="立即购买" onclick="window.open('${webPath}/life_order.htm?gid=$!{obj.id}&number=1')" type="button">
                            </div>
                        </td>
                    </tr>
                    #end
                </table>

                <div class="fenye">
                  <span class="user_page_sp">
                    <input type="hidden" value="1" id="currentPage" name="currentPage">
                    <a onclick="return gotoPage(1)" href="javascript:void(0);">首页</a> 第&#12288;<a
                          onclick="return gotoPage(1)" href="javascript:void(0);" class="this">1</a> 页&#12288;
                  </span>
                </div>
            </div>
        </div>
    </div>
</div>

$!httpInclude.include("/footer.htm")

<script>

    function refund(wid) {
        showDialog("warning","","确定此商品退货吗！",1,"warning",3,function() {
            alert(wid);
        });
    }
</script>
</body>
</html>
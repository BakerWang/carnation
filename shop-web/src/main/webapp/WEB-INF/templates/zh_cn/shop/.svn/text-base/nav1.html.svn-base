<script>
jQuery(document).ready(function(){
  jQuery("#navul li a").each(function(){
    var original_url=jQuery(this).attr("href");
	if("$!{op}"!=""){
		if(original_url.indexOf("$!{op}")>=0){
	  	 jQuery(this).parent().addClass("this");	
		}
	}
  });
 //鼠标经过左侧分类		
 	var loadImg=jQuery(".sale_two_img img");
 	if(loadImg.length > 0){
	    jQuery(".sale_two_img img").lazyload({effect:"fadeIn",width:170,height:170});
 	}
    jQuery(".left_menu_dl").hover(function(){
        var $this = $(this), $dd = $this.find(".left_menu_dd"), top = $this.position().top, mtop = 0 - top, h;
        $this.addClass("left_menu_dl_hover");
        h = $this.find(".left_menu_con").height();
        if (h > (top + 59)) {
            $dd.css("margin-top", mtop);
        } else {
            mtop = - h + 45;
            $dd.css("margin-top", mtop);
        }
    },function(){
        $(this).removeClass("left_menu_dl_hover");
    });
 //
  jQuery(".nav_left").mouseover(function(){
	  jQuery("#other_menu").show();
   });
  jQuery(".nav_left").mouseleave(function(){
	  jQuery("#other_menu").hide();	  
   });	 
});

   <script type="text/javascript">
   		function markqrcode(){
			if(document.createElement("canvas").getContext("2d")){   				
   				var canvas=document.createElement("canvas");
   				var ctx=canvas.getContext("2d");
   				canvas.width=470;
   				canvas.height=701;   				
   				var loadbg=document.getElementById("loadbg");   									
				ctx.drawImage(loadbg,0,0,470,701);			
				var imgqr=$("#qrcode2 img")[0];			
				ctx.drawImage(imgqr,106,220,255,255);
				var src=canvas.toDataURL("image/png");				
				var odownLoad=document.getElementById('down_code');
				
				
				
	            /* var img=document.createElement("img");
	            img.src=src;
	            odownLoad.appendChild(img);
	            return; */
	            				
		        if (myBrowser()==="IE"||myBrowser()==="Edge"){
		        	
		            //IE		 
		          //  $("#down_code").attr("href","javascript:;");
		         //   var blob = dataURLtoBlob(src);
		          //  alert(blob);
		            //支持IE11  
		         //   window.navigator.msSaveBlob(blob, "我的专属码.png");	        	
		            $("#down_code").attr("href","$!webPath/seller/qr_code.htm?url=$!{unified_QrPath}");
		          			            
		        }else{
		        	var blob = dataURLtoBlob(src);  
		            url = window.URL.createObjectURL(blob);		            
		            odownLoad.href = url; odownLoad.download = "我的专属码.png";
		        }
				
				
   			}else{//浏览器不支持canvas
   				$("#down_code").attr("href","$!webPath/seller/qr_code.htm?url=$!{unified_QrPath}");
   			}
   		}
   		
function dataURLtoBlob(dataurl) {
	  var arr = dataurl.split(','), mime = arr[0].match(/:(.*?);/)[1],
	    bstr = atob(arr[1]), n = bstr.length, u8arr = new Uint8Array(n);
	  while(n--){
	    u8arr[n] = bstr.charCodeAt(n);
	  }
	  return new Blob([u8arr], {type:mime});
}
   </script>
   <script>
		//判断浏览器类型
	    function myBrowser(){
	        var userAgent = navigator.userAgent; //取得浏览器的userAgent字符串
	        var isOpera = userAgent.indexOf("Opera") > -1;
	        if (isOpera) {
	            return "Opera"
	        }; //判断是否Opera浏览器
	        if (userAgent.indexOf("Firefox") > -1) {
	            return "FF";
	        } //判断是否Firefox浏览器
	        if (userAgent.indexOf("Chrome") > -1){
	            return "Chrome";
	        }
	        if (userAgent.indexOf("Safari") > -1) {
	            return "Safari";
	        } //判断是否Safari浏览器
	        if (userAgent.indexOf("compatible") > -1 && userAgent.indexOf("MSIE") > -1 && !isOpera) {
	            return "IE";
	        }; //判断是否IE浏览器
	        if (userAgent.indexOf("Trident") > -1) {
	            return "Edge";
	        } //判断是否Edge浏览器
	    }

		function SaveAs5(imgURL)
		{
		    var oPop = window.open(imgURL,"","width=1, height=1, top=5000, left=5000");
		    for(; oPop.document.readyState != "complete"; )
		    {
		        if (oPop.document.readyState == "complete")break;
		    }
		    oPop.document.execCommand("SaveAs");
		    oPop.close();
		}
</script>

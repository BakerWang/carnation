<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
<title>商家后台-优惠券列表- $!config.title - $!{config.poweredby}</title>
<meta name="keywords" content="$!config.keywords" />
<meta name="description" content="$!config.description" />
<meta name="generator" content="$!{config.meta_generator}" />
<meta name="author" content="$!{config.meta_author}">
<meta name="copyright" content="$!{config.copyRight}">
<link href="$!webPath/resources/style/system/front/default/css/public2.css" type="text/css" rel="stylesheet" />
<link href="$!webPath/resources/style/system/front/default/css/user.css" type="text/css" rel="stylesheet" />
<link  href="$!webPath/resources/style/common/css/jquery-ui-1.8.22.custom.css" type=text/css rel=stylesheet>
<script src="$!webPath/resources/js/jquery-1.6.2.js"></script>
<script src="$!webPath/resources/js/jquery.shop.common.js"></script>
<script src="$!webPath/resources/js/jquery-ui-1.8.21.js"></script>
<script src="$!webPath/resources/js/jquery.zh.cn.js" charset="utf-8"></script>
<script>
jQuery(document).ready(function(){
 jQuery('#coupon_begin_time').attr("readonly","readonly").datepicker({
	  dateFormat:"yy-mm-dd",
	  changeMonth: true,
	  changeYear: true
  });
  jQuery('#coupon_end_time').attr("readonly","readonly").datepicker({
	  dateFormat:"yy-mm-dd",
	  changeMonth: true,
	  changeYear: true
  });
});<!--end-->
</script>
</head>

<body>
$!httpInclude.include("/seller/top.htm")
<div class="main">
  <div class="seller_center">
    <div class="seller_center_left"> $!httpInclude.include("/seller/nav.htm?op=coupon") </div>
    <div class="seller_right">
      <div class="seller_position"><span><b><a href="$!webPath/seller/index.htm">商家中心</a></b>><b>促销推广</b>><b>优惠券列表</b></span></div>
      <div class="seller_list">
        <div class="seller_list_title">
          <ul class="seller_title_ul">
            <li class="this"><a href="$!webPath/seller/coupon.htm">优惠券列表</a></li>
            <li ><a href="$!webPath/seller/coupon_add.htm">新增优惠券</a></li>
          </ul>
        </div>
        #if($objs.size()>0)
        <div  class="user_sp_right"> 
         <form action="$!webPath/seller/coupon.htm" method="post">
           	<span></span> 
            <span class="size150"><input name="couponBeginTime" value="$!{couponBeginTime}" type="text" id="coupon_begin_time"  placeholder="开始时间"/> - </span>
            <span class="size150"><input name="couponEndTime" value="$!{couponEndTime}" type="text" id="coupon_end_time" placeholder="结束时间"/></span> 
            <span>优惠券名称</span> 
            <span class="size150"><input name="couponName" type="text" id="coupon_name" value="$!couponName"/></span>
            <input name="" type="submit"  value="搜索" style="cursor:pointer;"  class="seller_sear_btn"/>
            </span> 
           
          </form> </div>
          #end
        <div class="seller_list_box">
        
          <form method="post" name="ListForm" id="ListForm" action="$!webPath/seller/coupon.htm">
          
            <div class="operation">
              <table width="100%" border="0" cellspacing="0" cellpadding="0" id="opertable" class="user_order_table">
               #if($objs.size()>0)
                <tr id="opertitle">
                  <th width="15%">优惠券名称</th>
                  <th width="12%">优惠券金额</th>
                  <th width="12%">可用订单金额</th>
                  <th width="12%">发行数量</th>
                  <th width="12%">发放数量</th>
                   <th width="12%">使用时间</th>
                  <th align="center">操作</th>
                </tr>
                #end
                #if($objs.size()>0)
                #foreach($obj in $objs)
                <tr >
                  <td align="center">$!obj.couponName</td>
                  <td align="center">$!obj.couponAmount</td>
                  <td align="center">$!obj.couponOrderAmount</td>
                  <td align="center">#if($!{obj.couponCount}==0)不限量 #else $!{obj.couponCount}#end</td>
                  <td align="center">$!{obj.couponInfoCount}</td>
                  <td align="center">$!CommUtil.formatShortDate($!obj.couponBeginTime)至$!CommUtil.formatShortDate($!obj.couponEndTime)</td>
                  #set($couponStatus=0)
                  #if($!{obj.couponCount}>0)
                  #if($!{obj.couponInfoCount}>=$!{obj.couponCount})
                  #set($couponStatus=1)
                  #end
                  #end
                  <td align="center" class="del_operate">
                  	#if($!{obj.couponInfoCount}==0)
                  	<a href="$!webPath/seller/coupon_edit.htm?id=$!obj.id&currentPage=$!currentPage" class="del_a">编辑</a>
                    | <a href="$!webPath/seller/coupon_del.htm?id=$!obj.id&currentPage=$!currentPage" class="del_a">删除</a> | 
                    #end 
					#if($couponStatus==0)
          			<a href="$!webPath/seller/coupon_send.htm?id=$!obj.id&currentPage=$!currentPage" class="del_a">发放</a>
         			#else 发放完毕
         			#end
                    #if($!{obj.couponInfoCount}>0)
                    | <a href="$!webPath/seller/coupon_info_list.htm?couponId=$!obj.id" class="del_a">发放列表</a>	
                    #end 
                    </td>
                </tr>
                #end
                 #else
              <tr>
                <td colspan="6" align="center"><div class="seller_center_nothing">
                    <div class="seller_center_nothing_left"><img src="$!webPath/resources/style/system/front/default/images/seller_center_nothing.png" /></div>
                    <div class="seller_center_nothing_right">暂时没有数据</div>
                  </div></td>
              </tr>
              #end
              </table>
            </div>
            <input id="currentPage" name="currentPage" type="hidden" value="$!currentPage"/>
            <div class="seller_list_page">
              <div  class="seller_page_sp"> $!gotoPageFormHTML</div>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
$!httpInclude.include("/footer.htm")
</body>
</html>

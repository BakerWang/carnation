<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
<title>商家后台-店铺设置-$!config.title - $!{config.poweredby}</title>
<meta name="keywords" content="$!config.keywords" />
<meta name="description" content="$!config.description" />
<meta name="generator" content="$!{config.meta_generator}" />
<meta name="author" content="$!{config.meta_author}">
<meta name="copyright" content="$!{config.copyRight}">
<script type="text/javascript" src="http://api.map.baidu.com/api?v=2.0&ak=700b132845ef5b0b135066dfa0222a37"></script>
<link href="$!webPath/resources/style/system/front/default/css/public2.css" type="text/css" rel="stylesheet" />
<link href="$!webPath/resources/style/system/front/default/css/user.css" type="text/css" rel="stylesheet" />
<link href="$!webPath/resources/style/common/css/overlay_blue.css" type="text/css" rel="stylesheet" />
<script src="$!webPath/resources/js/jquery-1.6.2.js"></script>
<script src="$!webPath/resources/js/jquery-ui-1.8.21.js"></script>
<script src="$!webPath/resources/js/jquery.poshytip.min.js"></script>
<script src="$!webPath/resources/js/jquery.shop.common.js"></script>
<script src="$!webPath/resources/js/ajaxfileupload.js"></script>
<script src="$!webPath/resources/js/jquery.validate.min.js"></script>
<script src="$!webPath/resources/js/jquery.custom.validate.js" type="text/javascript"></script>
<script charset="utf-8" src="$!webPath/resources/editor/kindeditor.js"></script>
<script src="$!webPath/resources/js/alertBox.js"></script>
<script>

jQuery(document).ready(function(){
	var options = {
        cssPath : '$!webPath/resources/editor/themes/default/default.css',
        filterMode : true,
		uploadJson:'$!webPath/upload.htm',
		width : '700px',
		height:'400px'
	};
	
	jQuery.validator.addMethod("isPhone", function(value,element) {
		var length = value.length;
		var mobile = /^1\d{10}$/;
		return this.optional(element) || mobile.test(value);
		}, "请正确填写您的手机号码");
	
	jQuery("#theForm").validate({
		errorPlacement: function(error, element) {
					element.parent().find("i").html("");
					error.appendTo(element.parent().find("i"));
					error.appendTo(element.parent().parent().parent().siblings("i"));
					error.appendTo(element.siblings("span"));

		},
		rules:{
		  storeName:{required:true},	
		  #if($!store.isShop==true)
		  licenseCName:{required :true},
		  #end
		  #if($!store.isO2o==true)
		  storeAddress:{required :true},
		  #end
		  storeTelephone:{isTel:true},
			mobile : {required:true,isPhone : true}
		 },
		messages:{
		  storeName:{required:"店铺名称不得为空"},	
		  #if($!store.isShop==true)
		  licenseCName:{required:"公司名称不能为空"},
		  #end
		  #if($!store.isO2o==true)
		  storeAddress:{required:"店铺地址不能为空"},
		  #end
		  storeTelephone:{isTel:"电话号码格式不对"} ,
			mobile : {required:"手机号码不能为空",
					  isPhone : "手机号码格式不对"}
		},
		 submitHandler:function(){			 
			 if($("#base_shop_img_bz").attr("src")=="$!webPath/resources/style/shop/images/store_default/logo.jpg"&&$("#store_logo_path").val()==""){
				 alertBoxFn('提示','请上传店铺标志',1);
				 return;
			 }
			 if($("#base_shop_img_fm").attr("src")=="$!webPath/resources/style/shop/images/store_default/logo2.png"&&$("#store_logo_cover").val()==""){
				 alertBoxFn('提示','请上传店铺封面',1);
				 return;
			 }
			 
			 
			jQuery(".seller_save").attr("disabled","disabled");
			var areaId = jQuery("#areaId").val();
			var storeName = jQuery("#storeName").val();
			var storeTelephone = jQuery("#storeTelephone").val();
			var mobile = jQuery("#mobile").val();
			var storeSeoKeywords = jQuery("#storeSeoKeywords").val();
			var storeSeoDescription = jQuery("#storeSeoDescription").val();

			
			var licenseCName = jQuery("#licenseCName").val();
			var storeQq = jQuery("#storeQq").val();
		
			var storeAddress = jQuery("#storeAddress").val();
			var licenseBusinessScope = jQuery("#licenseBusinessScope").val();
			var storeInfo = jQuery("#storeInfo").val();
			var storeLat =  jQuery("#maker_pos_N").val();
			var storeLon =  jQuery("#maker_pos_E").val();
			jQuery.ajaxFileUpload({url:'$!webPath/seller/store_set_save.htm',
								  dataType:'json',
								  fileElementId:['logo','banner', 'logocover'],
								  data:{areaId:areaId,storeName:storeName,licenseCName:licenseCName,
								  		storeTelephone:storeTelephone,mobile:mobile,storeQq:storeQq,storeSeoKeywords:storeSeoKeywords,storeAddress:storeAddress,storeInfo:storeInfo,
								  		licenseBusinessScope:licenseBusinessScope,
								  		 #if($!store.isO2o==true)
								  		storeLat:storeLat,
								  		storeLon:storeLon,
								  		#end
										storeSeoDescription:storeSeoDescription},
								  success:function(data){		
				 					var lin = ""+data.url;	
				 					if(data.ret==true){
			 		 					showDialog("msg_info","",data.op_title,0,"succeed",3,function(arg){window.location.href=arg},lin);jQuery(".seller_save").removeAttr("disabled");
		  						   	}
								 }
			});
			
		 }
  });
  jQuery("select").change(function(){
     var level=jQuery(this).attr("level");
	 var id=jQuery(this).val();
	 if(id!=""){
	  jQuery.post("$!webPath/load_area.htm",{"pid":id},function(data){
	     jQuery("#area"+level).empty();
		 jQuery("#area"+level).append("<option value=''>请选择</option>");
	     jQuery.each(data, function(index,item){
		   jQuery("#area"+level).append("<option value='"+item.id+"'>"+item.areaName+"</option>");
		 });
		 jQuery("#area"+level).show();
	  },"json");
	 }else{
	   for(var i=level;i<=3;i++){
	    jQuery("#area"+i).empty();
	    jQuery("#area"+i).hide();
	   }
	 }
  });
 jQuery("#area3").change(function(){
   var id=jQuery(this).val();
   jQuery("#areaId").val(id);
  });
  editor = KindEditor.create('#store_info',options);	
  //
  jQuery("#logo").change(function(){
     jQuery("#store_logo_path").val(jQuery(this).val());
  });
  
  jQuery("#logocover").change(function(){
	     jQuery("#store_logo_cover").val(jQuery(this).val());
	  });
  jQuery("#banner").change(function(){
     jQuery("#store_banner_logo").val(jQuery(this).val());
  });
});<!--end-->
function save_form(){
   jQuery("#theForm").submit();
   
}

#if($!storeSet&&$!storeSet=='false')
window.onload=function(){	
	$(".seller_center_left ul li a").click(function(){
		alert("对不起，系统检测到您的店铺未完善店铺封面，为了店铺能正常访问和管理，请完善您的店铺封面!");
		return false;
	});
}
#end

</script>
</head>
<body>
$!httpInclude.include("/seller/top.htm")
<div class="main">
  <div class="seller_center"> <div style="background:red" VALUE = "">$!httpInclude.include("/seller/nav.htm?op=store_set")</div>
    <div class="seller_right">
      <div class="seller_position"><span><b><a href="$!webPath/seller/index.htm">商户中心</a></b>><b>我的店铺</b>><b>店铺设置</b></span></div>
      <div class="seller_list">
        <div class="seller_list_title">
          <ul class="seller_title_ul">
            <li class="this"><a href="$!webPath/seller/store_set.htm">店铺设置</a></li>
            #if($!store.isShop==true) <li><a href="$!webPath/seller/store_slide.htm">店铺幻灯</a></li>#end
          </ul>
        </div>
        <div class="add_usercenter">
          <form action="$!webPath/seller/store_set_save.htm" method="post" enctype="multipart/form-data" id="theForm">
          
            <table width="100%" border="0" cellspacing="0" cellpadding="0" class="user_base_table">
            
              <tr>
              	<td width="100%"  colspan="2"> <span style="font-size: 16px">店铺信息</span> （*标号必填）</td>
              </tr>
              <tr>
                <td width="125" align="right"><strong class="redstr">*</strong>店铺名称： </td>
                <td><input name="storeName" type="text" id="storeName" value="$!store.storeName" class="base_txt"/>
                  <i class="base_i"> </i></td>
              </tr>
              <tr>
                <td width="125" align="right"><strong class="redstr">*</strong>手机号码：</td>
                <td><input name="mobile" type="text" id="mobile" value="$!seller.mobile" class="base_txt"/>
                  <span class="base_i">用于客服联系、订单通知、平台通知等，请正确填写管理人电话</span></td>
              </tr>
              <tr>
                <td width="125" align="right"><strong class="redstr">*</strong>店铺标志：</td>
                <td>
                  #set($store_logo="$!webPath/resources/style/shop/images/store_default/logo.jpg")
                  #if($!config.storeImage)
                  #set($store_logo="$!config.storeImage.path")
                  #end
                  #if($!store.storeLogoPath&&$!store.storeLogoPath!='')
                  #set($store_logo="$!store.storeLogoPath")
                  #end 
                  <span class="base_shop_img"><img id="base_shop_img_bz" src="$!store_logo" width="210" height="78" /></span> 
                  <div class="base_shop_sp">                  		
                  <span class="water_upload">
    <b class="opacity_txt"><input name="store_logo_path" type="text" id="store_logo_path" readonly="readonly" /></b>
    <b class="opacity_submit"><input name="" type="button" value="浏览..." /></b>
    <b class="opacity_up"><input name="logo" type="file" id="logo" size="30" /></b>
    </span>
                </div> <i class="base_i">此处为您的店铺标志，将显示在店铺信息栏里，<span class="red">210*78像素</span></i></td>
              </tr>
              
               <tr>
                <td width="125" align="right"><strong class="redstr">*</strong>店铺封面：</td>
                <td>
                  #set($store_cover="$!webPath/resources/style/shop/images/store_default/logo2.png")
                  #if($!store.storeCoverPath)
                  #set($store_cover="$!store.storeCoverPath")
                  #end 
                  <span class="base_shop_img"><img id="base_shop_img_fm" src="$!store_cover" width="120" height="86" /></span> 
                  <div class="base_shop_sp">
                  
                  <span class="water_upload">
    				<b class="opacity_txt"><input name="store_logo_cover" type="text" id="store_logo_cover" readonly="readonly" /></b>
				    <b class="opacity_submit"><input name="" type="button" value="浏览..." /></b>
				    <b class="opacity_up"><input name="logocover" type="file" id="logocover" size="30" /></b>
   				  </span>
                </div> <i class="base_i">此处为您的店铺封面，图片尺寸为，<span class="red">800*576</span>像素，否则店铺无法访问。</i></td>
              </tr>
              
             #if($!store.isShop==true)
              <tr>
              #else
               <tr style="display: none;">
               #end
                <td width="125" align="right" >店铺条幅：</td>
                <td> 
                  #set($banner="$!webPath/resources/style/shop/images/store_default/banner.jpg")
                  #if($!store.storeBannerPath)
                  #set($banner="$!store.storeBannerPath")
                  #end 
                  <span class="base_shop_img"><img src="$!banner" width="600" height="60"/></span> <div class="base_shop_sp">
               
                    <span class="water_upload">
    <b class="opacity_txt"><input name="store_banner_logo" type="text" id="store_banner_logo" readonly="readonly" /></b>
    <b class="opacity_submit"><input name="" type="button" value="浏览..." /></b>
    <b class="opacity_up">   <input name="banner" type="file" id="banner" size="30" /></b>
    </span>
                </div> <i class="base_i">此处为您的店铺条幅，将显示在店铺logo后方的banner位置，最佳尺寸宽度为1920像素，高度为120像素，店标与店铺条幅只有点击"提交"后才能生效</i></td>
              </tr>
                 #if($!store.isShop==true)
              <tr>
                <td align="right">店铺类型： </td>
                <td>$!grade.gradeName #if($!{grade.content}!="")（ $!{grade.content} ）#end
                </td>
              </tr>
                <tr>
                <td align="right">商品主营类目： </td>
                <td>$!main_gc.className
                </td>
              </tr>
              #if($!detail_gcs)
              <tr>
                <td align="right">商品详细类目： </td>
                <td>#foreach($gc in $detail_gcs) $!gc.className #end
                </td>
              </tr>
              #end
               #end
              <tr>
                <td width="125" align="right"><strong class="redstr">*</strong>所在地区：</td>
                <td>$!fullName
                #if($!store.isShop==true)
                	<span class="setedit">
                        <input name="input" type="button"  value="编辑" onclick="javascript:jQuery('#area1').show();" id="modify"/>
                        <select name="area1" id="area1" level="2" style="width:80px;display:none;" class="valid">
                          <option value="" selected="selected">请选择地区</option>          
   				           #foreach($area in $areas)                 
                           <option value="$!area.id">$!area.areaName</option>                            
				           #end                  
                        </select>
                        <select name="area2" id="area2" style="display:none;width:80px;" level="3" class="valid">
                        </select>
                        <select name="area3" id="area3" style="display:none;width:80px;" level="4" class="valid">
                        </select>
                    </span>
                    #end
                    <input name="areaId" type="hidden" id="areaId"  value="$!store.areaId"/>
                </td>
              </tr>
              
              
             <tr>
                <td width="125" align="right">
                 #if($!store.isO2o==true)
                <strong class="redstr">*</strong>
                #end
                	店铺地址： </td>
                <td>
               	<input name="storeAddress" type="text" id="storeAddress" value="$!store.storeAddress" class="base_txt"/> 
                		<i></i>
                </td>
              </tr>
              
              
               #if($!store.isO2o==true)
               <tr>
                <td width="125" align="right"><strong class="redstr">*</strong>店铺地图： </td>
                <td>
                 <a href="javascript:void(0)" class="f-line c_blue sign_address_a"  dialog_uri="$!webPath/static?name=marker_map.html" dialog_title="标记地址" dialog_width="640" dialog_height="400" dialog_id="marker_dialog"></a>
                <span id="marker_map_state" class="marker_map_state c_gray ml-20" style="color: #7dba55"></span>
                 <input type="hidden" id="maker_pos_N" name="storeLat" value="$!store.storeLat">
                
                <input type="hidden" id="maker_pos_E" name="storeLon" value="$!store.storeLon" >
                </td>
              </tr>
              <tr>
                <td width="125" align="right">联系电话：</td>
                <td><input name="storeTelephone" type="text" id="storeTelephone" value="$!store.storeTelephone" class="base_txt"/>
                <i></i>
                </td>
              </tr>
               <tr>
	                <td width="125" align="right" valign="top">公司简介： </td>
	                <td>
	                <textarea name="storeInfo" cols="45" rows="5" id="storeInfo" class="base_text">$!store.storeInfo</textarea>
	                  <i ></i>
	                </td>
              </tr>
              <tr>
	                <td width="125" align="right" valign="top">经营范围： </td>
	                <td>
	                  <textarea name="licenseBusinessScope" cols="45" rows="5" id="licenseBusinessScope" class="base_text">$!store.licenseBusinessScope</textarea>
	                  <i ></i>
	                </td>
              </tr>
              
              <tr>
              	<td width="100%" colspan="2">入驻信息</td>
              </tr>
              <tr>
	                <td align="right">服务主营： </td>
	                <td>
	                $!main_group.gcName
	                </td>
              </tr>
              <tr>
	                <td align="right">服务详细类目： </td>
	                <td>
	                	#foreach($gc in $detail_groups) $!gc.gcName #end
	                </td>
              </tr>
              <tr>
	                <td align="right">返润比例： </td>
	                <td>
	               	$!rebate
	                </td>
              </tr>
              <tr>
	                <td align="right">隶属运营商： </td>
	                <td>
	                $!operatorName
	                </td>
              </tr>
             
               #end
              
         
             
              
               #if($!store.isShop==true)
              <tr>
                <td align="right">客服QQ：</td>
                <td><input name="storeQq" type="text" id="storeQq" value="$!store.storeQq" class="base_txt"/>
                	<i class="base_i">显示在商品详细页右侧商家信息栏中，买家点击后可与此客服QQ进行对话</i>
                </td>
              </tr>
              #end

              <tr>
                <td width="125" align="right">&nbsp;</td>
                <td><input type="button"  value="保 存" style="cursor:pointer;" onclick="save_form();" class="seller_save"/></td>
              </tr>
            </table>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
$!httpInclude.include("/footer.htm")
</body>
</html>
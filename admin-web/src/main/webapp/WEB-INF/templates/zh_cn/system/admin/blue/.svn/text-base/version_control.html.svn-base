<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
<title></title>
<link href="$!webPath/resources/style/system/manage/$!{config.websiteCss}/template.css"  rel="stylesheet" type="text/css"/>
<link href="$!webPath/resources/style/system/manage/$!{config.websiteCss}/jquery-ui-1.9.2.custom.min.css"  rel="stylesheet" type="text/css"/>
<script src="$!webPath/resources/js/jquery-1.6.2.js"></script>
<script src="$!webPath/resources/js/jquery-ui-1.8.21.js"></script>
<script src="$!webPath/resources/js/jquery.poshytip.min.js"></script>
<script src="$!webPath/resources/js/jquery.shop.common.js"></script>
<script>
function ajax_update(id,fieldName,obj){
   var val=jQuery(obj).val();
    jQuery.ajax({type:'POST',
	              url:'$!webPath/admin/sys_version_control_ajax.htm',
				  data:{"id":id,"fieldName":fieldName,"value":val},
				beforeSend:function(){
				  
				},
			   success:function(data){
	             if(val==""){
				   jQuery(obj).attr("src","$!webPath/resources/style/system/manage/blue/images/"+data+".png");
				 }else{
				   jQuery(obj).val(val);
				 }      
              }
	    });
}
jQuery(document).ready(function(){
 
});
</script>
</head>
<body>
<div class="cont">
  <h1 class="seth">APP版本</h1>
    <div class="nav_list">
     <ul>
     <li><a href="$!webPath/admin/version_control.htm" class="this"><b>管理</b></a> </li>
     <li><a href="$!webPath/admin/version_control_update.htm" ><b>新增</b></a></li>
     #if($!edit)
     <li><a href="javascript:void(0);" class="this"><b>编辑</b></a> </li>
     #end
     </ul>    
    </div>
  <div class="fshoptb2">
  <form name="ListForm" id="ListForm"  action="$!webPath/admin/version_control.htm" method="post">
    <table width="100%" border="0" cellspacing="0" cellpadding="0" class="fshop_table2">
      <tr>
        <th width="10%"><span class="form_btna">类型</span></th>
        <!-- 11.IOS appStore 12 IOS 蒲公英 21.安卓 -->
        <th width="10%" align="center"><span class="form_btna">版本</span></th>
        <th width="10%" align="center"><span class="form_btna">更新时间</span></th>
        <th  align="center"><span class="form_btna">描述</span></th>
        <th width="10%" align="center"><span class="form_btna">是否开启</span></th>
        <th width="10%" align="center"><span class="form_btna">是否强制</span></th>
        <th width="10%" align="center"><span class="form_btna">下载次数</span></th>
        <th width="10%" align="center"><span class="form_btna">下载链接</span></th>
        <th width="10%" align="center"><span class="form_btna">操作</span></th>
      </tr> 
      #foreach($obj in $objs)
      <tr id="$!obj.id">
        <td align="center">#if($!obj.vcType==11) IOS APP store #end #if($!obj.vcType==12) IOS 蒲公英   #end  #if($!obj.vcType==21) 安卓 #end </td>
        <td align="center">$!obj.vcNumber</td>
        <td align="center">$!CommUtil.formatLongDate($!obj.addTime)</td>
        <td align="center">$!obj.vcDescribe</td>
        <td align="center"><img  src="$!webPath/resources/style/system/manage/blue/images/$!{obj.ifOpen}.png" width="21" height="23" onclick="ajax_update('$!obj.id','ifOpen',this)" style="cursor:pointer;" title="可编辑"/></td>
        <!-- <td align="center">$!obj.ifOpen</td> -->
        <td align="center"><img  src="$!webPath/resources/style/system/manage/blue/images/$!{obj.ifMandatory}.png" width="21" height="23" onclick="ajax_update('$!obj.id','ifMandatory',this)" style="cursor:pointer;" title="可编辑"/></td>
        <!-- <td align="center">$!obj.ifMandatory</td> -->
        <td align="center">$!obj.downloads</td>
        <td align="center">$!obj.downloadUrl</td>
        <td align="center" class="hui oprate_con"><a  href="$!webPath/admin/version_control_update.htm?id=$!obj.id&amp;currentPage=$!currentPage" class="blue">编辑</a>
<!--          | <a href="$!webPath/admin/save_integral.htm?type=$!obj.type&id=281&consumerType=goods&integral=76.00" class="blue">积分</a> -->
         </td>
      </tr>
      #end   
    </table>    
    <div class="operate_bar">
	    <div class="fenye">
	    	<input type="hidden" name="currentPage" id="currentPage" value="$!currentPage" />
		 	<input name="mulitId" type="hidden" id="mulitId" />
	      	$!gotoPageFormHTML
	    </div>  
   </div>
   </form>
  </div>  
</div>
</body>
</html>

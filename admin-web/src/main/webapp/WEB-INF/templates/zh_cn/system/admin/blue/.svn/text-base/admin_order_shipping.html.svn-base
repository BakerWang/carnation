<script>
jQuery(document).ready(function(){
jQuery.validator.addMethod("verify",function(value,element){
var re = /^[0-9a-zA-Z]*$/;
        if(re.test(jQuery("#shipCode").val())){			
			return true;
		  } 
		  else {
		    return false;
			  }
});								
  jQuery("#theForm").validate({
	   rules:{
		   shipCode:{required:true,verify:true},
		   sa_id:{required:true},
		   ecc_id:{required:true}
		   },
	   messages:{
	       shipCode:{required:"单号不能为空",verify:"请正确填写单号"},
		   sa_id:{required:"发货地址不能为空"},
		   ecc_id:{required:"物流公司不能为空"}
	   }
	});
});
</script>
<form action="$!webPath/admin/order_shipping_save.htm" method="post" id="theForm">
  <table style="float:left;" width="100%" border="0" cellspacing="0" cellpadding="0" class="box_table">
    <tr>
      <td height="25" colspan="2" align="center" valign="top" >请输入您的物流信息</td>
    </tr>
    <tr>
      <td width="100" align="right" valign="top">订单号：
        <input name="id" type="hidden" id="id" value="$!obj.id" />
      </td>
      <td align="left">$!obj.orderId</td>
    </tr>
	#if($!physicalGoods=="true")
    <tr>
      <td height="26" align="right">物流公司：</td>
      <td align="left">
      <select name="eccId" id="ecc_id">
      #foreach($ecc in $eccs)
      <option value="$!ecc.id" #if($!ecc.eccDefault==1) selected="selected"#end>$!ecc.eccName</option>
      #end
      </select></td>
    </tr>
    <tr>
      <td height="27" align="right">发货地址：</td>
      <td align="left">
      <select name="saId" id="sa_id">    
        #foreach($shipAddr in $shipAddrs)
        <option value="$!shipAddr.id">$!shipAddr.saName</option>        
        #end
      </select>
      </td>
    </tr>
    <tr>
      <td align="right" valign="top">物流单号：</td>
      <td align="left"><input name="shipCode" type="text" id="shipCode" size="30" /></td>
    </tr>
	#end
	#foreach($dg in $deliveryGoods)<!--订单里面的虚拟商品-->
	<tr>
      <td align="right" valign="top">虚拟商品$!{velocityCount}：</td>
      <td align="left">$!CommUtil.substring("$!dg.goodsName",15) 数量：$!orderFormTools.queryOfGoodsCount("$!obj.id","$!dg.id")</td>
    </tr>
     <tr>
      <td align="right" valign="top">虚拟商品说明：</td>
      <td align="left"><textarea name="orderSellerIntro" id="order_seller_intro" cols="35" rows="1"></textarea></td>
      <input type="hidden" name="goodsName" value="$!dg.goods_name"><input type="hidden" name="goodsId" value="$!dg.id">
            <input type="hidden" name="goodsCount" value="$!orderFormTools.queryOfGoodsCount("$!obj.id","$!dg.id")">
    </tr>
	#end
    <tr>
      <td align="right" valign="top">操作说明：</td>
      <td align="left"><textarea name="stateInfo" id="state_info" cols="35" rows="5"></textarea></td>
    </tr>
    <tr>
      <td colspan="2" align="center"><span class="inputbtn">
        <input name="" type="submit" value="提交" style="cursor:pointer;"/>
        <input name="currentPage" type="hidden" id="currentPage" value="$!currentPage" />
        <input name="op" type="hidden" id="op" value="$!op" />
      </span></td>
    </tr>
  </table>
</form>

<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
<title></title>
<link href="$!webPath/resources/style/system/manage/$!{config.websiteCss}/template.css"  rel="stylesheet" type="text/css"/>
<link  href="$!webPath/resources/style/chosen/muitiple-select.css" type=text/css rel=stylesheet />
</head>
<body>
<div class="cont">
  <h3 class="seth">任务管理</h3>
  <div class="nav_list">
    <ul>
      <li><a href="$!webPath/admin/checkValuation/sys_task_manager_list.htm" class="this"><b>管理列表</b></a></li>
      <li><a href="$!webPath/admin/checkValuation/sys_task_manager_add.htm"><b>增加</b></a></li>
    </ul>
  </div>
  <form action="$!webPath/admin/checkValuation/sys_task_manager_list.htm" id="ListForm" name="ListForm" method="post">
    <div class="search"><span>任务名称</span> <span class="size100">
      <input name="taskName" type="text" id="taskName" value="$!vo.taskName"/>
      </span>
      <span>关键字</span> <span class="size150">
      <input name="content" type="text" id="content" value="$!vo.content">
      </span>
      <span>是否推荐</span> <span class="size100">
      	<select name="isTop">
          <option value="">全部</option>
          <option value="1" #if($vo.isTop== 1) selected="selected" #end>是</option>
          <option value="0" #if($vo.isTop== 0) selected="selected" #end>否</option>
        </select>
      </span>
      <span>任务状态</span> <span class="size100">
      	<select name="isEnabled">
          <option value="">全部</option>
          <option value="1" #if($vo.isEnabled== 1) selected="selected" #end>启用</option>
          <option value="0" #if($vo.isEnabled== 0) selected="selected" #end>停用</option>
        </select>
      </span>
      <span class="btn_search">
      <input type="submit" value="搜索" style="cursor:pointer;" class="search_btn">
      </span>
    </div>
    <div class="fshoptb">
      <table width="100%" border="0" cellspacing="0" cellpadding="0" class="fshop_table">
        <tr>
          <th width="4%">&nbsp;</th>
          <th width="10%"><span class="form_btna">任务名称</span></th>
          <th width="15%"><span class="form_btna">任务内容</span></th>
           <th width="8%"><span class="form_btna">关键字</span></th>
          <th width="8%"><span class="form_btna">是否推荐</span></th>
          <th width="8%"><span class="form_btna">默认时间</span></th>
          <th width="8%"><span class="form_btna">默认周期</span></th>
          <th width="8%"><span class="form_btna">参与人数</span></th>
          <th width="8%"><span class="form_btna">权重</span></th>
          <th width="8%"><span class="form_btna">任务状态</span></th>
          <th><span class="form_btnb">操作</span></th>
        </tr>
        #foreach($obj in $objs)
        <tr>
          <td class="check_position"><input name="checkbox" type="checkbox" id="checkbox" value="$!obj.id" /></td>
          <td align="center">$!obj.taskName</td>
          <td align="center">$!obj.content</td>
          <td align="center"><span id="keywordslist"> #foreach($kw in $obj.keyWords) <span kid="$!kw.id">$!kw.name</span>  #end </span></td>
          <td align="center">#if($!obj.isTop == 1) 是 #else 否 #end</td>
          <td align="center">$!CommUtil.formatShortDate($!obj.defaultTime)</td>
          <td align="center">$!obj.defaultDay</td>
          <td align="center">$!obj.userCount</td>
          <td align="center">$!obj.priority</td>
          <td align="center">#if($!obj.isEnabled == 1) 开启 #else 关闭 #end</td>
          <td class="hui oprate_con" align="center">
            <a href="$!webPath/admin/checkValuation/sys_task_manager_add.htm?id=$!obj.id" class="blue">修改</a>|
            <a href="javascript:;"
               onclick="if(confirm('删除后不可恢复，是否继续?'))window.location.href='$!webPath/admin/checkValuation/sys_task_manager_delete.htm?mulitId=$!obj.id&currentPage=$!currentPage'"
               class="blue">删除</a>
          </td>
        </tr>
        #end
      </table>
    </div>
    <div class="operate_bar">
      <div class="fenye">
        <input type="hidden" name="currentPage" id="currentPage" value="$!currentPage">
        <input name="mulitId" type="hidden" id="mulitId">
        $!gotoPageFormHTML
      </div>
      <div class="oper_sp">
        <span class="oper_check">
          <label><input type="checkbox" name="all" id="all" onclick="selectAll(this)" value="">全部</label>
        </span>
        <span class="oper_del">
          <input name="" type="button" value="删除" style="cursor:pointer;" onclick="cmd('$!webPath/admin/checkValuation/sys_task_manager_delete.htm?currentPage=$!currentPage')">
        </span>
      </div>
    </div>
  </form>
</div>
<script src="$!webPath/resources/js/jquery-1.6.2.js" type="text/javascript"></script>
<script src="$!webPath/resources/js/jquery.shop.common.js" type="text/javascript"></script>
<script src="$!webPath/resources/js/jquery.poshytip.min.js" type="text/javascript"></script>
</body>
</html>

<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
<title></title>
#macro ( genericTree $somelist ) 
#foreach ( $some in $somelist )
<option value="$!some.id">#if($!some.level>0)
#foreach($count in [0..$!some.level])&nbsp;#end #end $!some.className</option>
#genericTree($some.childs) 
#end 
#end
</head>
<link href="$!webPath/resources/style/system/manage/$!{config.websiteCss}/template.css"  rel="stylesheet" type="text/css"/>
<script src="$!webPath/resources/js/jquery-1.6.2.js"></script>
<script src="$!webPath/resources/js/jquery.poshytip.min.js"></script>
<script src="$!webPath/resources/js/jquery.shop.common.js"></script>
<script src="$!webPath/resources/js/jquery.validate.min.js"></script>
<script>
jQuery(document).ready(function(){
  jQuery("#theForm").validate({
    rules:{
	  userName:{
	    required :true,
	     remote:{
		    url: "$!webPath/verify_username.htm",     //后台处理程序
            type: "post",               //数据发送方式
            dataType: "json",           //接受数据格式   
            data: {                     //要传递的数据
                  "userName": function(){return jQuery("#userName").val();},
				  "id":function(){return jQuery("#id").val()}
		     }
			}
	  },
	  email:{
	    required :true,
		email:true,
		remote:{
		    url: "$!webPath/verify_email.htm",     //后台处理程序
            type: "post",               //数据发送方式
            dataType: "json",           //接受数据格式   
            data: {                     //要传递的数据
                  "mail": function(){return jQuery("#userName").val();},
				  "id":function(){return jQuery("#id").val()}
		     }
			}
	  }#if(!$!edit),
	  password:{
	    required:true,
		minlength:6,
		maxlength:20
	  }
	  #end
	 },
	messages:{
	  userName:{required:"用户名不能为空",remote:"该用户名已经存在"},
	  email:{required:"电子邮箱不能为空",email:"邮箱格式不对",remote:"该邮箱已被使用"}#if(!$!edit),
	  password:{required:"密码不能为空",minlength:"密码不能少于{0}位",maxlength:"密码不能大于{0}位"}#end
	}
  });	
  jQuery(":radio[id=sex]").each(function(){
    if(jQuery(this).val()=="$!obj.sex")jQuery(this).attr("checked",true);
  });
  jQuery(":radio[id=report][value=$!obj.report]").attr("checked",true);
});

function saveForm(){
   jQuery("#theForm").submit();
}


</script>
<body>
<div class="cont">
  <h1 class="seth">商品评价</h1>
  <div class="nav_list">
    <ul>
      <li><a href="$!webPath/admin/evaluate_list.htm"><b>所有评价</b></a> </li>
      <li><a href="javascript:void(0);" class="this"><b>编辑</b></a></li>
    </ul>
  </div>
  <form name="theForm" id="theForm" action="$!webPath/admin/evaluate_save.htm" method="post">
    <input name="id" type="hidden" id="id" value="$!obj.id" />
    <input name="currentPage" type="hidden" id="currentPage" value="$!currentPage" />
    <input name="list_url" type="hidden" id="list_url" value="$!webPath/admin/evaluate_list.htm" />
    <div class="edit">
      <div class="editul setcont">
        <ul class="set1">
          <li class="setcont_bg">商品名称</li>
          <li><span class="webname"> #set($goods_url="$!webPath/goods_$!{obj.evaluate_goods.id}.htm")
            #if($!config.second_domain_open && $!obj.evaluate_goods.goods_type==1 && $!obj.evaluate_goods.goods_store.store_second_domain!="")
            #set($goods_url="http://$!{obj.evaluate_goods.goods_store.store_second_domain}.$!{domainPath}/goods_$!{obj.evaluate_goods.id}.htm")
            #end <a href="$!goods_url" target="_blank">$!obj.goodsName</a> </span></li>
        </ul>
        #if($!obj.goodsSpec!="")
        <ul class="set1">
          <li  class="setcont_bg">商品规格</li>
          <li><span class="webname"> $!obj.goodsSpec </span></li>
        </ul>
        #end
        <ul class="set1">
          <li  class="setcont_bg">买家名称</li>
          <li><span class="webname"> $!obj.nickName</span></li>
        </ul>
        <ul class="set1">
          <li  class="setcont_bg">买家评价</li>
          #if($!obj.evaluateBuyerVal==1)
          #set($evaluateBuyerVal="好评")
          #end
          #if($!obj.evaluateBuyerVal==0)
          #set($evaluateBuyerVal="中评")
          #end
          #if($!obj.evaluateBuyerVal==-1)
          #set($evaluateBuyerVal="差评")
          #end
          <li><span class="webname"> $!evaluateBuyerVal </span></li>
        </ul>
        <ul class="set1">
          <li  class="setcont_bg">买家评价时间</li>
          <li><span class="webname"> $!CommUtil.formatLongDate($!obj.addTime) </span></li>
        </ul>
        <ul class="set1">
          <li  class="setcont_bg">买家评价信息</li>
          <li><span class="webname"> $!obj.evaluateInfo </span></li>
        </ul>
        #set($imgs=$!evaluateViewTools.queryEvaImgSrc($!obj.evaluatePhotos))
        #if($imgs.size()>0)
        <ul class="set1">
          <li  class="setcont_bg">买家晒单图片</li>
          <li><span class="webname"> #foreach($!img in $imgs)<img src="$!img.path"  height="65" width="65"/> #end </span></li>
        </ul>
        #end
        #if($obj.evaluateStatus==1)
        <ul class="set1">
          <li  class="setcont_bg">买家追加评价信息</li>
          <li><span class="webname"> $!obj.addevaInfo </span></li>
        </ul>
        #set($imgs=$!evaluateViewTools.queryEvaImgSrc($!obj.addevaPhotos))
        #if($imgs.size()>0)
        <ul class="set1">
          <li  class="setcont_bg">买家追加晒单图片</li>
          <li><span class="webname"> #foreach($!img in $imgs)<img src="$!img.path"  height="65" width="65"/> #end </span></li>
        </ul>
        #end
        #end
        <ul class="set1">
          <li  class="setcont_bg">商家店铺</li>
          <li><span class="webname"> $!obj.storeName </span></li>
        </ul>
        #if($!obj.evaluateStatus == 0)
        <ul class="set1">
          <li  class="setcont_bg">评价状态
            <input name="edit" type="hidden" id="edit" value="true" />
          </li>
          <li class="radiosp"><span>
            <input style="border:none; height:16px; width:16px;" name="evaluateStatus" id="evaluateStatus"  type="radio" value="2" />
            </span> <span>取消评价</span> <span>
            <input style="border:none; height:16px; width:16px;"type="radio" id="evaluateStatus" name="evaluateStatus" value="1" />
            </span> <span> 禁止显示 </span><span id="nothis"><strong class="q"></strong><strong class="w">管理员只能操作一次评价，取消评价后，买卖双方评分失效，禁止显示，评分有效但不显示</strong><strong class="c"></strong></span> </li>
        </ul>
        <ul class="set1">
          <li class="setcont_bg">操作说明</li>
          <li><span class="webname">
            <textarea name="evaluateAdminInfo" cols="40" rows="6" id="evaluateAdminInfo">$!obj.evaluateAdminInfo</textarea>
            </span></li>
        </ul>
        #else
        <ul class="set1">
          <li  class="setcont_bg">评价状态</li>
          #if($!obj.evaluateStatus==0)
          #set($status="正常显示")
          #end
          #if($!obj.evaluateStatus==1)
          #set($status="禁止显示")
          #end
          #if($!obj.evaluateStatus==2)
          #set($status="取消评价")
          #end
          <li><span class="webname">
            <input name="evaluateStatus" type="hidden" id="evaluateStatus" value="$!obj.evaluateStatus" />
            $!status </span></li>
        </ul>
        <ul class="set1">
          <li  class="setcont_bg">操作说明</li>
          <li><span class="webname">
            <input name="evaluateAdminInfo" type="hidden" id="evaluateAdminInfo" value="$!obj.evaluateAdminInfo" />
            $!obj.evaluateAdminInfo
            <!--<textarea id="evaluateAdminInfo" rows="6" cols="40" name="evaluateAdminInfo">$!obj.evaluateAdminInfo </textarea>--></span></li>
        </ul>
        #end </div>
    </div>
  </form>
  <div class="submit"> <span class="pad120">
    <input name="save" type="button" value="提交" onclick="saveForm()" />
    </span> </div>
</div>
</body>
</html>
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
<title></title>
<link href="$!webPath/resources/style/system/manage/$!{config.websiteCss}/template.css"  rel="stylesheet" type="text/css"/>
<script src="$!webPath/resources/js/jquery-1.6.2.js"></script>
<script src="$!webPath/resources/js/jquery.validate.min.js"></script>
<script src="$!webPath/resources/js/jquery.shop.common.js"></script>
<script src="$!webPath/resources/js/jquery.poshytip.min.js"></script>
<script>

	function showMyAdItems(obj){
		var adApId = $(obj).val();
				if(adApId ==""){
					$("#dname").html("");
					$("#dname").append("<option value=''>所有区域</option>");
				}
				
				$.ajax({
					type:"post",
					url:"$!webPath/admin/advert/advert_select.htm",
					data:"areaAdId="+adApId,
					dataType:"json",
					success:function(data){
							var html = "<option value=''>所有区域</option>";
							$.each(data,function(index,dom){
								
								html += "<option value='"+dom.id+"'>"+dom.name+"</option>";
							});
							$("#dname").html("");
							$("#dname").append(html);
					}
					
					
				});
	}


	function changeStatus(id, ele,status){
		$.ajax({
			type:"post",
			url:"$!webPath/admin/advert_area_changeShow.htm",
			data:"disabled="+status+"&id="+id+"&type="+1,
			dataType:"json",
			success:function(data){
				if(data.disabled==0){
					$(ele).attr({"src":"$!webPath/resources/style/system/manage/blue/images/false.png","onclick":"changeStatus("+data.id+", this,0)","val":"true"});
				}else{
					$(ele).attr({"src":"$!webPath/resources/style/system/manage/blue/images/true.png","onclick":"changeStatus("+data.id+", this,1)","val":"true"});
				}
			}
		});
	}
				




/* 
系统通用方法，根据参数来决定处理的url和参数
*/
function cmd22(){
	var url=arguments[0];
	var mulitId="";
	jQuery("#ListForm").find(":checkbox:checked").each(function(){
	  if(jQuery(this).val()!=""){	  
	    mulitId+=jQuery(this).val()+",";
	  }
	});
	if(mulitId!=""){
	  jQuery("#ListForm #mulitId").val(mulitId);
	  if(confirm("确定要执行该操作？")){
	     jQuery("#ListForm").attr("action",url);
	     jQuery("#ListForm").submit();
	  }
	}else{
       alert("至少选择一条数据记录");
	}
}
</script>
</head>
<body>
<div class="cont">
  <h3 class="seth">内容管理</h3>
  <div class="nav_list">
  	<ul>
    	<li><a href="$!webPath/admin/advert/advert_content.htm"  class="this"><b>管理</b></a></li>
        <li><a href="$!webPath/admin/advert/advert_content_add.htm" ><b>新增</b></a></li>
    </ul>
  </div>
  <FORM name="ListForm" id="ListForm"  action="$!webPath/admin/advert/advert_content.htm" method="post">
  
      <div class="search">
			<span>专区</span> <span class="size250"> 
			<span class="size200">
			<select name="areaAdId" id="adApId" onchange="showMyAdItems(this);">
            <option value="">所有专区</option>
                           #foreach($areaad in $areaads)
						<option value="$!areaad.id" #if($!vo.areaAdId==$!areaad.id) selected="selected"#end>$!areaad.name</option>
						#end         
                      </select>
			</span>
			</span> 			
			<span>区域</span> <span class="size250"> 
			<span class="size200">
			<select name="id" id="dname">
            <option value="">所有区域</option>
	         		    
	         		    #foreach($area in $areas)
						<option value="$!area.id" #if($!vo.id==$!area.id) selected="selected"#end>$!area.name</option>
						#end
                      </select>
			</span>
			</span> 
			<span class="btn_search"> <input type="submit" class="search_btn" style="cursor: pointer;" value="搜索" name="">
			</span>
	</div>
	
  <div class="fshoptb">
    <table width="100%" border="0" cellspacing="0" cellpadding="0" class="fshop_table">
      <tr>
        <th width="10%">&nbsp;序号</th>
        <th width="10%"><span class="form_btna">城市</span></th>
        <th width="25%"><span class="form_btna">图片</span></th>
        <th width="15%"><span class="form_btna">所在专区</span></th>
        <th width="15%"><span class="form_btna">所在区域</span></th>
        <th width="10%"><span class="form_btna">状态</span></th>
        <th ><b class="form_btnb">操作</b></th>
      </tr>
      
       #set($num=1)
	  #foreach($obj in $objs)
      <tr>
        <td class="check_position"><input name="checkbox"  type="checkbox" id="checkbox" value="$!obj.id" /><span style="padding-left:56px">$num</span></td>
       <td class="c_zone" align="center">$!obj.areaName</td>
       <td class="c_img" align="center"><img src="$!obj.pic" width="100"></td>
       <td class="c_zone" align="center">$!obj.name</td>
       <td class="c_area" align="center">
       #if($!obj.dname)
      	 $!obj.dname
       #else
      	未选择区域
       #end
       </td>
       <td class="a_status" align="center">
       									#if($!obj.disabled==0)
       											<img onclick="changeStatus(${obj.id}, this,1)"  src="$!webPath/resources/style/system/manage/blue/images/true.png" width="25" height="21" border="0" style="cursor:pointer;" title="可编辑" val="true">
       									#else
       											<img onclick="changeStatus(${obj.id}, this,0)"   src="$!webPath/resources/style/system/manage/blue/images/false.png" width="25" height="21" border="0" style="cursor:pointer;" title="可编辑" val="false">        									
       											#end
       </td>
        <td class="hui oprate_con" align="center">
            <a href="$!webPath/admin/advert_content_edit.htm?areaAdId=$!obj.areaAdId&id=$!obj.id&amp;currentPage=$!currentPage" class="blue">编辑</a> 
            |<a href="javascript:void(0);" onclick="if(confirm('删除后不可恢复，是否继续?'))location.href='$!webPath/admin/content_delete.htm?mulitId=$!obj.id&amp;currentPage=$!currentPage'" class="blue">删除</a>
        </td>
      </tr>
      #set($num=$num+1)
      #end
    </table>
 </div>
 <div class="operate_bar">
 	<div class="oper_sp"> 
    	<span class="oper_check"><label><input type="checkbox" name="all" id="all" onclick="selectAll(this)" value="" />全部</label></span>
    	<span class="oper_del"><input name="" type="button" value="删除" style="cursor:pointer;" onclick="cmd22('$!webPath/admin/content_delete.htm')"/></span>
    </div>
    <div class="fenye">
    	<input type="hidden" name="currentPage" id="currentPage" value="$!currentPage" />
	  	<input name="mulitId" type="hidden" id="mulitId" />
	  	$!gotoPageFormHTML
    </div>       
    
 </div>
 </FORM>
</div>
</body>
</html>

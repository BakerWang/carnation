<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
<title></title>
</head>
<link href="$!webPath/resources/style/system/manage/$!{config.websiteCss}/template.css"  rel="stylesheet" type="text/css"/>
<script src="$!webPath/resources/js/jquery-1.6.2.js"></script>
<script src="$!webPath/resources/js/jquery.shop.common.js"></script>
<script src="$!webPath/resources/js/jquery.poshytip.min.js"></script>
<script>
jQuery(document).ready(function(){
  jQuery("#condition").val("$!condition");	
  jQuery(".memimg").mouseover(function(){
     jQuery(this).css("cursor","pointer");
	 jQuery(".mem_detail[id^=user_detail_]").hide();
     var id=jQuery(this).attr("id");
	 jQuery("#user_detail_"+id).show();
  });
  jQuery(".mem_detail[id^=user_detail_]").mouseleave(function(){
    jQuery(this).hide();
  });
});

function deleteAll(){
	$('input[name="uid"]:checked').each(function(){
		$(this).val();
	});

}
</script>
<body>
  <div class="cont">
    <h1 class="seth">专家管理</h1>
    <div class="nav_list">
    <ul> 
    <li><a href="$!webPath/admin/experts_list.htm"  class="this"><b>专家列表</b></a> </li>
    <li><a href="$!webPath/admin/experts_add.htm" ><b>新增专家</b></a></li>
    <li><a href="$!webPath/admin/experts_sort.htm" ><b>抗衰老专家排序</b></a></li>
     <li><a href="$!webPath/admin/experts_division_sort.htm" ><b>健康管理师排序</b></a></li>
     </ul> 
     </div>
		<FORM name="ListForm" id="ListForm"  action="$!webPath/admin/experts_list.htm" method="post">
    <div class="search">
      <span>
         <!--  <select name="condition" id="condition">
            <option value="loginName">专家帐号</option>
            <option value="name">专家姓名</option>
            <option value="title">职称</option>
          </select> -->账号：
          </span> <span class="size150">
          <input name="loginName" type="text" id="loginName" value="$!vo.loginName" />
          </span><span>
          <input name="" type="submit"  value="搜索" style="cursor:pointer;" title="搜索专家"  class="search_btn"/>
          </span>

    </div>
    <div class="fshoptb">
      <table width="100%" border="0" cellspacing="0" cellpadding="0" class="fshop_table">
        <tr>
          <th width="6%" align="center">序号</th>
          <th width="10%" align="center"><span class="form_btna">账号</span></th>
          <th width="10%" align="center"><span class="form_btna">专家姓名</span></th>
          <th width="10%" align="center"><span class="form_btna">职称</span></th>
          <th width="6%" align="center"><span class="form_btna">性别</span></th>
          <th width="13%" align="center"><span class="form_btna">电话</span></th>
          <th width="20%" align="center"><span class="form_btna">注册邮箱</span></th>
          <th width="10%" align="center"><span class="form_btna">创建时间</span></th>
          <th width="15%" align="center"><span class="form_btna">操作</span></th>
        </tr>
       #foreach($!obj in $objs) 
        <tr>
          <td class="check_position"><input name="uid" type="checkbox" id="uid" style="width:16px; border:none;" value="$!obj.uid" /></td>
          <td class="lightred">$!obj.loginName</td>
          <td class="lightred">$!obj.name</td>
          <td class="lightred">$!obj.title</td>
          <td class="lightred">
          #if($!obj.sex=='1')
                              男
          #elseif($!obj.sex=='2')
                              女                    
          #end
          </td>
          <td class="lightred">$!obj.mobile</td>
          <td align="center">$!obj.email</td>
          <td align="center">$!CommUtil.formatShortDate($!obj.createTime)</td>
          <td class="lightred"><a href="$!webPath/admin/experts_edit.htm?id=$!obj.uid" class="blue">编辑</a>|
                             <a href="javascript:void(0);" onclick="if(confirm('删除后不可恢复，是否继续?'))window.location.href='$!webPath/admin/expert_del.htm?mulitId=$!obj.uid&currentPage=$!currentPage'" class="blue">删除</a></td>
        </tr>
         #end
        <tr>
        <td colspan="9" style="border-bottom:0px; padding:0px;">
        <div class="operate_bar">
              <div class="fenye">
              <input type="hidden" name="mulitId" id="mulitId" />
		<input name="currentPage" type="hidden" id="currentPage" value="$!currentPage" />
        $!gotoPageFormHTML
         </div> 
    
        <div class="oper_sp"> <span class="oper_check"><label><input name="all" type="checkbox" id="all" onclick="selectAll(this)" value="" />全部</label></span>
         <span class="oper_del">  <input name="" type="button" value="删除" style="cursor:pointer;" onclick="cmd('$!webPath/admin/expert_del.htm');"/></span></div>
       
         </div>
        
        </td>
        </tr>
      </table>
    </div>
	</FORM>
  </div>
</body>
</html>

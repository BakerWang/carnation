<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
<title></title>


<link
	href="$!webPath/resources/style/system/manage/$!{config.websiteCss}/template.css"
	rel="stylesheet" type="text/css" />
<link
	href="$!webPath/resources/style/common/css/jquery-ui-1.8.22.custom.css"
	type=text/css rel=stylesheet />
<link href="$!webPath/resources/style/common/css/overlay.css"
	type="text/css" rel="stylesheet" />
<script src="$!webPath/resources/js/jquery-1.6.2.js"></script>
<script src="$!webPath/resources/js/jquery.shop.common.js"></script>
<script src="$!webPath/resources/js/jquery-ui-1.8.21.js"></script>
<script src="$!webPath/resources/js/jquery.poshytip.min.js"></script>

<script>
jQuery(document).ready(function(){
  //jQuery("#type").val("$!type");
  //
});
</script>
</head>
<body>
	<div class="cont">
  <h3 class="seth">商品评价</h3>
		<div class="nav_list">
			<ul>
				<li><a href="$!webPath/admin/user_evaluations_goods.htm?userId=$!vo.userId" class="this"><b>商品评价列表</b></a>
				</li>
				<li><a href="$!webPath/admin/user_evaluations_service.htm?userId=$!vo.userId"><b>商户服务评价列表</b></a></li>
			</ul>
		</div>
  <form name="queryForm" id="queryForm" action="" method="post">
    <div class="search">
      <ul>
        <li> <span>商品名称</span> <span class="size150">
          <input name="goodsName" type="text" id="goodsName" value="$!vo.goodsName" />
          </span> <span>买家用户名</span> <span class="size150">
          <input name="nickName" type="text" id="nickName" value="$!vo.nickName" />
          </span> <span>
          <input name="" type="submit"  value="搜索" style="cursor:pointer;" class="search_btn" />
        </span> </li>
      </ul>
    </div>
  </form>
  <form action="$!webPath/admin/user_evaluations_goods.htm?userId=$!vo.userId" method="post" id="ListForm">
    <div class="fshoptb">
      <table width="100%" border="0" cellspacing="0" cellpadding="0" class="fshop_table">
        <tr>
          <th width="30%"><span class="form_btna">商品名称</span></th>
          <th width="12%"><span class="form_btna">买家名称</span></th>
          <th width="15%"><span class="form_btna">买家评价</span></th>
          <th width="20%" ><span class="form_btna">商家店铺</span></th>
          <th width="12%" align="center"><span class="form_btna">评价状态</span></th>
        </tr>
        #foreach($obj in $objs)
        <tr>
          <td>$!obj.goodsName </td>
          <td align="center">$!obj.nickName</td>
          #if($!obj.evaluateBuyerVal==1)
            #set($evaluateBuyerVal="好评")
          #end
          #if($!obj.evaluateBuyerVal==0)
            #set($evaluateBuyerVal="中评")
          #end
          #if($!obj.evaluateBuyerVal==-1)
            #set($evaluateBuyerVal="差评")
          #end
          <td align="center">$!evaluateBuyerVal</td>
          <td align="center">$!obj.storeName</td>
          <!-- #if($!obj.evaluate_seller_val==1)
            #set($evaluate_seller_val="好评")
          #end
          #if($!obj.evaluate_seller_val==0)
            #set($evaluate_seller_val="中评")
          #end
          #if($!obj.evaluate_seller_val==-1)
            #set($evaluate_seller_val="差评")
          #end  -->        
          #if($!obj.evaluateStatus==0)
            #set($status="正常显示")
          #end
          #if($!obj.evaluateStatus==1)
            #set($status="禁止显示")
          #end
          #if($!obj.evaluateStatus==2)
            #set($status="取消评价")
          #end                    
          <td align="center">$!status</td>
        </tr>
        #end
      </table>
    </div>
    <div class="operate_bar">
    <div class="fenye">
    	<input name="goods_name" type="hidden" id="goods_name" value="$!vo.goods_name" />
        <input name="userName" type="hidden" id="userName" value="$!vo.userName" />
        <input name="currentPage" type="hidden" id="currentPage" value="$!currentPage" />
        $!gotoPageFormHTML
    </div> 
 </div>
  </form>
</div>
</body>
</html>
jQuery(document).ready(function(){
 	jQuery("#theForm").validate({
    rules:{
	 name:{required:true},
	 code:{required:true},
	 size_img_1:{
	 	required:true	,	
	 	},
	 size_img_2:{required:true	},
	 orders:{required:true}
	 },
    messages:{
	 name:{required:"名称不能为空"},
	 code:{required:"专区代码不能为空"},
	 size_img_1:{required:"请输入宽度"},
	 size_img_2:{required:"请输入高度"},
	 orders:{required:"排序不能为空"}
	}
  }); 	
  //样式选取
   jQuery("li.btn_search input").bind("click",function(){
   	$('li.btn_search input').removeClass('selected_type_btn_selected');
   	$(this).addClass('selected_type_btn_selected');
  	var type_id = $(this).attr("type-id");
  	$("ul.myset_ul").hide();
    $("ul."+type_id+"").show();
 });
 //点击图片获取选取值
 jQuery("ul.myset_ul li img").bind('click',function(){
 	$('.myset_ul img').removeClass('img_selected');
 	$(this).siblings('span').children('input').attr('checked','checked');
 	$(this).addClass('img_selected');
 	
 });
 //样式图片选中效果
 jQuery('.myset_ul li span input').click(function() {     
        	$('.myset_ul img').removeClass('img_selected');
             $(this).parents('span').siblings('img').addClass('img_selected');
});
 var style = '$!areaAd.style';
 if(style){
	 style = style.substring(0,1);
	 $(".btn_search input").each(function(){
		 if($(this).attr("type-id") == "type-" + style){
			 $(this).trigger("click");
		 }
	 });
 }
 });
 function saveForm(method){
	//参数验证
   jQuery("#theForm").submit();
}

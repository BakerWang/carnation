<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
<title></title>
<link href="$!webPath/resources/style/system/manage/$!{config.websiteCss}/template.css"  rel="stylesheet" type="text/css"/>
<script src="$!webPath/resources/js/jquery-1.6.2.js"></script>
<script src="$!webPath/resources/js/jquery.validate.min.js"></script>
<script src="$!webPath/resources/js/jquery.shop.common.js"></script>
<script src="$!webPath/resources/js/jquery.poshytip.min.js"></script>
<script>
	/* 
	系统通用方法，根据参数来决定处理的url和参数
	*/
	function cmd22(){
		var url=arguments[0];
		var mulitId="";
		jQuery("#ListForm").find(":checkbox:checked").each(function(){
		  if(jQuery(this).val()!=""){	  
		    mulitId+=jQuery(this).val()+",";
		  }
		});
		if(mulitId!=""){
		  jQuery("#ListForm #mulitId").val(mulitId);
		  if(confirm("确定要执行该操作？")){
		     jQuery("#ListForm").attr("action",url);
		     jQuery("#ListForm").submit();
		  }
		}else{
	       alert("至少选择一条数据记录");
		}
	}
</script>
</head>
<body>
<div class="cont">
  <h3 class="seth">问卷题组</h3>
  <div class="nav_list">
  	<ul>
    	<li>
    		<a href="$!webPath/admin/wj_Group_list.htm" class="this">
    			<b>管理</b>
    		</a>
    	</li>
        <li>
	        <a href="$!webPath/admin/wj_group_add.htm" >
	        	<b>新增</b>
	        </a>
        </li>
    </ul>
  </div>
  <FORM name="ListForm" id="ListForm"  action="$!webPath/admin/wj_Group_list.htm" method="post">
      <div class="search">
			<span>主题名称</span> 
			<span class="size250">
				<input type="text" value="$!labelName" id=labelName name="labelName">
			</span> 
			<span class="btn_search">
				<input type="submit" class="search_btn" style="cursor: pointer;" value="搜索" name="">
			</span>
	   </div>
  
  <div class="fshoptb">
    <table width="100%" border="0" cellspacing="0" cellpadding="0" class="fshop_table">
      <tr>
        <th width="5%" >
        	&nbsp;
        </th>
        <th >
        	<span class="form_btna">题目</span>
        </th>
        <th >
        	<span class="form_btna">题目状态</span>
        </th>
        <th >
        	<span class="form_btna">所属主题</span>
        </th>
        <th >
        	<span class="form_btna">排序</span>
        </th>
        <th >
        	<span class="form_btna">创建时间</span>
        </th>
        <th >
        	<span class="form_btna">操作</span>
        </th>
      </tr>
      #foreach($obj in $objs)
      <tr>
      	<td class="check_position" align="center">
        	<input name="checkbox" type="checkbox" id="checkbox" value="$!obj.id" />
        </td>
        <td align="center">
        	$!obj.groupTitle
        </td> 
        <td align="center">
        	#if($!obj.isDeleted)
        		关闭
        	#else
        		开启
        	#end
        </td>
        <td align="center">
        	$!obj.themeName
        </td>
        <td align="center">
        	$!obj.groupIndex
        </td>
        <td align="center">
        	$!dataUtile.formatDateTime($!obj.createTime)
        </td>
        <td align="center">
        	#if($!obj.pid==0)
        		<a href="$!webPath/admin/wj_GroupResult_list.htm?themeID=$!obj.wjThemeID" class="blue">结果管理</a>
        	#elseif($!obj.pid>00)
        		<a href="$!webPath/admin/wj_GroupResult_list.htm?groupID=$!obj.id" class="blue">结果管理</a>
        	#end
        	&nbsp;|&nbsp;
        	<a href="$!webPath/admin/wj_question_list.htm?groupID=$!obj.id" class="blue">题目管理</a>
        	&nbsp;|&nbsp;
        	<a href="$!webPath/admin/edit_WenJuangroup.htm?id=$!obj.id" class="blue">编辑</a>
        </td>
      </tr>
      #end
    </table>
 </div>
 <div class="operate_bar">
 	<div class="oper_sp"> 
    	<span class="oper_check">
    		<label>
    			<input type="checkbox" name="all" id="all" onclick="selectAll(this)" value=""/>
    			全部
    		</label>
    	</span>
    	<span class="oper_del">
    		<input name="" type="button" value="删除" style="cursor:pointer;" onclick="cmd22('$!webPath/admin/del_WenJuangroup.htm')"/>
    	</span>
    </div>
    <div class="fenye">
    	<input type="hidden" name="currentPage" id="currentPage" value="$!currentPage" />
	  	<input name="mulitId" type="hidden" id="mulitId" />
	  	$!gotoPageFormHTML
    </div>       
 </div>
 </FORM>
</div>
</body>
</html>

				var imgArr=jQuery(".topicImg ul li img");
				var imgCount=imgArr.length;
				var index=0;
				function loadOneByOne(){
					if(imgCount==0) return;
					var img=document.createElement("img");
					var dataSrc=imgArr.eq(index).attr("data-src")
					img.src=dataSrc;
					if(img.complete){
						if(img.width<img.height){
							imgArr.eq(index).attr("src",dataSrc).css(cssText1).fadeIn().parent().css("background","#FFFFFF");								
						}else{
							imgArr.eq(index).attr("src",dataSrc).css(cssText2).fadeIn().parent().css("background","#FFFFFF");	
						}
						if(index<imgCount){
							index++;
							loadOneByOne();
						}
					}else{						
						img.onload=function(){
							if(img.width<img.height){
								imgArr.eq(index).attr("src",dataSrc).css(cssText1).fadeIn().parent().css("background","#FFFFFF");								
							}else{
								imgArr.eq(index).attr("src",dataSrc).css(cssText2).fadeIn().parent().css("background","#FFFFFF");	
							}
							if(index<imgCount){
								index++;
								loadOneByOne();
							}
						}					
						
					}
				}
				loadOneByOne();				
			});

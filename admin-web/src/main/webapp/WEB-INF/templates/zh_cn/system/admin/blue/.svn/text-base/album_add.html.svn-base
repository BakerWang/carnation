<link href="$!webPath/resources/style/common/css/overlay_blue.css" type="text/css" rel="stylesheet" />
<link href="$!webPath/resources/style/common/css/window.css" type="text/css" rel="stylesheet" />
<form action="$!webPath/admin/album_save.htm" method="post" id="theForm">
<table style="float:left;" width="100%" border="0" cellspacing="0" cellpadding="0" class="box_table">
    <tr>
      <td width="120" align="right" class="hui_table"><input name="id" type="hidden" id="id" value="$!obj.id" />
      相册名称:</td>
      <td align="left"><span class="dia_txt">
        <input name="albumName" type="text" id="albumName" value="$!obj.albumName" />
      </span></td>
    </tr>
    <tr>
      <td width="120" align="right" class="hui_table">相册序号:</td>
      <td align="left"><span class="dia_txt">
        <input name="albumSequence" type="text" id="albumSequence" value="$!obj.albumSequence" />
      </span></td>
    </tr>
    <tr>
      <td colspan="2" align="center"><span class="inputbtn">
        <input name="save" id="save"  type="button" value="提交"  onclick="saveForm()" style="cursor:pointer;"/>
        <input name="currentPage" type="hidden" id="currentPage" value="$!currentPage" />
        </span></td>
    </tr>
  </table>
</form>
<script>
jQuery("#theForm").validate({
   rules:{
	   albumName:{required :true},
	   albumSequence:{required :true, number: true}
	 },
	messages:{
		albumName:{required :"相册名称不能为空"},
		albumSequence:{required :"相册序号不能为空", number: '只能是数字'}
	}
 });
jQuery("#pid").val("$!obj.parent.id");
jQuery(":radio[id=display][value=$!obj.display]").attr("checked",true);

function saveForm(){
	jQuery("#save").attr("disabled","disabled");
	jQuery("#theForm").submit();
	}
</script>
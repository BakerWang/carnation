	<title></title>
	<link rel="stylesheet" type="text/css" href="$!webPath/resources/js/easyui/themes/gray/easyui.css">
	<link rel="stylesheet" type="text/css" href="$!webPath/resources/js/easyui/themes/icon.css">
	<script type="text/javascript" src="$!webPath/resources/js/easyui/jquery.min.js"></script>
	<script type="text/javascript" src="$!webPath/resources/js/easyui/jquery.easyui.min.js" ></script>
	<script type="text/javascript" src="$!webPath/resources/js/easyui/locale/easyui-lang-zh_CN.js"></script>
</head>

<body>
	<div id='opButtonsList' style="padding:5px 5px;">
	 <form id="searchForm1" method="post" action="$!webPath/admin/coupon_get_list.htm" >
			<div style="padding:5px 5px;">
				<strong>查询</strong>
    		<!-- 	<select id="states" class="easyui-combobox" name="status" style="width:100px;">
	    			#foreach($sKey in ${statusMap.keySet()})
						<option value="$!sKey" #if($!sKey==$!vo.status) selected="true" #end>${statusMap.get($sKey)}</option>
					#end
				</select>
				&nbsp;&nbsp; -->
    			<input id="startGetTimeStr" class="easyui-datetimebox" data-options="prompt:'开始时间'" name="startGetTimeStr" style="width:150px" value="$!vo.createdTimeStr"/>
				<strong>至</strong>
				<input id="endGetTimeStr" class="easyui-datetimebox" data-options="prompt:'结束时间'" name="endGetTimeStr" style="width:150px" value="$!vo.offTimeStr"/>
				&nbsp;&nbsp;
				状态
				<select id="select"  class="easyui-combobox" name="isGet" style="width:100px;">
				      <option value="">---请选择---</option>
					  <option value="0">未抢到</option>
					  <option value="1">抢到</option>
				</select>
				&nbsp;&nbsp;
				<input class="easyui-textbox" type="text" name="mobile" style="width:100px;" data-options="prompt:'手机号'" value="$!vo.mobile"/>
				 &nbsp;&nbsp;&nbsp;
			   <input class="easyui-textbox" type="text" name="name" style="width:100px;" data-options="prompt:'用户姓名'" value="$!vo.name"/>
			   &nbsp;&nbsp;&nbsp;
			   <input class="easyui-textbox" type="text" name="nickName" style="width:100px;" data-options="prompt:'用户昵称'" value="$!vo.nickName"/>
					<!-- <select id="select"  class="easyui-combobox" name="packageId" style="width:120px;">
					 <option value="0">--选择优惠券名称--</option>
					#foreach($reds in $!actRedPackageTools.findAll())
					  <option value="$!reds.id"  #if($!reds.id==$!vo.packageId) selected="true" #end>$!reds.schemeName</option>
					#end
				</select> -->
				&nbsp;&nbsp;
				<a href="javascript:void(0)" class="easyui-linkbutton" data-options="iconCls:'icon-search'" onclick="formSubmit()">查询</a>
	    	</div>
	    	<input type="hidden" id="actCouponId" name="actCouponId" value="$!vo.actCouponId"></input>
			<input type="hidden" id="page" name="page" value="$!currentPage"></input>
	    	<input type="hidden" id="size" name="size" value="$!pageSize"></input>
	  </form>
	</div>
	
	<table class="easyui-datagrid" style="width:100%;height:500px;"
			data-options="singleSelect:true,collapsible:true,rownumbers:true" toolbar="#opButtonsList">
				<thead>
				<tr>
					<th data-options="halign:'center',field:'schemeName',width:180,align:'center'">优惠券名称</th>
				    <th data-options="halign:'center',field:'userId',width:100,align:'center'">用户id</th>
				    <th data-options="halign:'center',field:'mobile',width:120,align:'center'">用户手机</th> 
				    <th data-options="halign:'center',field:'name',width:120,align:'center'">用户姓名</th>
				    <th data-options="halign:'center',field:'nickName',width:120,align:'center'">用户昵称</th>
					<th data-options="halign:'center',field:'getTime',width:150,align:'center'">领取时间</th>
					<th data-options="halign:'center',field:'isGet',width:100,align:'right'">状态</th>
					<!-- <th data-options="halign:'center',field:'operate',width:100,align:'right'">操作</th> -->
				</tr>
				
			</thead>
		    <tbody>
		      #foreach($obj in $objs)
		        <tr> 
		            <td>$!obj.schemeName</td>	
		            <td>$!obj.userId</td>
		            <td>$!obj.mobile</td>
		             <td>$!obj.name</td>
		            <td>$!obj.nickName</td>
					<td>$!CommUtil.formatLongDate($!obj.getTime)</td>
					<td>
					    
					#if($!obj.isGet==1)
			      <span style="color:green;"> 抢到</span>
			         #end
			         #if($!obj.isGet==0)
			       <span style="color:red;"> 未抢到 </span> 
			         #end
					</td>       
		           
		        </tr>
		      #end
		    </tbody>
	</table>
	<div id="pp" class="easyui-pagination" data-options="total:$!rows,pageSize:$!pageSize,pageNumber:$!currentPage,pageList:[10,20,50,100]" style="background:#efefef;border:1px solid #ccc;"></div> 
</body>

<script>

        jQuery('#pp').pagination({
        	onSelectPage:function(pageNumber, pageSize){
        		jQuery(this).pagination('loading');
        		jQuery('#page').attr("value",pageNumber);
        		jQuery('#size').attr("value",pageSize);
        		jQuery(this).pagination('loaded');
				//var a = jQuery("#searchForm").submit();
				formSubmit();
        	},
        });
		
	        function formSubmit(){
        	jQuery("#searchForm1").submit();
           }
	     
	        

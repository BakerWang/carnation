<script>
/* 
系统通用方法，根据参数来决定处理的url和参数
*/
function cmd22(){
	var url=arguments[0];
	var mulitId="";
	jQuery("#ListForm").find(":checkbox:checked").each(function(){
	  if(jQuery(this).val()!=""){	  
	    mulitId+=jQuery(this).val()+",";
	  }
	});
	if(mulitId!=""){
	  jQuery("#ListForm #mulitId").val(mulitId);
	  if(confirm("确定要执行该操作？")){
	     jQuery("#ListForm").attr("action",url);
	     jQuery("#ListForm").submit();
	  }
	}else{
       alert("至少选择一条数据记录");
	}
}

function changeStatus(id, ele,status){
	$.ajax({
		type:"post",
		url:"$!webPath/admin/advert_area_changeShow.htm",
		data:"disabled="+status+"&id="+id+"&type="+1,
		dataType:"json",
		success:function(data){
			if(data.disabled==0){
				$(ele).attr({"src":"$!webPath/resources/style/system/manage/blue/images/false.png","onclick":"changeStatus("+data.id+", this,0)","val":"true"});
			}else{
				$(ele).attr({"src":"$!webPath/resources/style/system/manage/blue/images/true.png","onclick":"changeStatus("+data.id+", this,1)","val":"true"});
			}
		}
	});
}
</script>
</head>
<body>
<div class="cont">
  <h3 class="seth">区域管理</h3>
  <div class="nav_list">

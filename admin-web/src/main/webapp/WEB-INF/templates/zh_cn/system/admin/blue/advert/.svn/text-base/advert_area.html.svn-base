						<option value="$areaad.id" #if($vo.areaAdId==$areaad.id) selected="selected" #end>$areaad.name</option>
                    #end       
	            </select>
			</span>
		</span> 
		<span class="btn_search"> <input type="submit" class="search_btn" style="cursor: pointer;" value="搜索" name=""></span>
	</div>
	<div class="fshoptb">
		<table width="100%" border="0" cellspacing="0" cellpadding="0" class="fshop_table">
	      <tr>
	        <th width="10%">&nbsp;序号</th>
	        <th width="15%"><span class="form_btna">区域</span></th>
	        <th width="15%"><span class="form_btna">所在专区</span></th>
	        <th width="25%"><span class="form_btna">图片</span></th>
	        <th width="10%"><span class="form_btna">状态</span></th>
	        <th ><b class="form_btnb">操作</b></th>
	      </tr>
	      #set($num=$pageNumber*10)
		  #foreach($obj in $objs)
		  	#if($!obj.disabled==0)
		  		#set($status="显示")
		  	#else
		  		#set($status="不显示")
		  	#end
	      	#set($num=$num+1)
	      	
		  	#set($adName="未选择专区")
		  	#foreach($areaad in $areaads)
		  		#if($areaad.id == $obj.areaAdId)
		  			#set($adName=$areaad.name)
		  		#end
		  	#end
	      <tr>
	       <td class="check_position">
